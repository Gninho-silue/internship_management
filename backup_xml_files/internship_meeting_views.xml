<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- MEETING TREE VIEW -->
        <!-- ================================= -->

        <!-- Meeting Tree View -->
        <record id="view_internship_meeting_tree" model="ir.ui.view">
            <field name="name">internship.meeting.tree</field>
            <field name="model">internship.meeting</field>
            <field name="arch" type="xml">
                <tree string="Meetings"
                      create="true"
                      editable="false"
                      multi_edit="1"
                      decoration-info="state=='scheduled'"
                      decoration-warning="state=='confirmed'"
                      decoration-primary="state=='in_progress'"
                      decoration-success="state=='completed'"
                      decoration-danger="state=='cancelled'"
                      decoration-muted="state=='postponed'">

                    <!-- Meeting Information -->
                    <field name="name"/>
                    <field name="meeting_type" widget="badge"
                           decoration-info="meeting_type=='initial'"
                           decoration-success="meeting_type=='follow_up'"
                           decoration-warning="meeting_type=='review'"
                           decoration-primary="meeting_type=='final'"
                           decoration-danger="meeting_type=='emergency'"/>

                    <!-- Related Records -->
                    <field name="internship_id"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>

                    <!-- Schedule Information -->
                    <field name="start_datetime"/>
                    <field name="duration" widget="float_time"/>
                    <field name="end_datetime" readonly="1"/>
                    <field name="location"/>

                    <!-- Status and Progress -->
                    <field name="state" widget="badge"
                           decoration-info="state=='scheduled'"
                           decoration-warning="state=='confirmed'"
                           decoration-primary="state=='in_progress'"
                           decoration-success="state=='completed'"
                           decoration-danger="state=='cancelled'"
                           decoration-muted="state=='postponed'"/>

                    <!-- Additional Info -->
                    <field name="attendee_count" string="Attendees" widget="numeric"/>
                    <field name="has_online_link" widget="boolean_toggle"/>
                    <field name="follow_up_required" widget="boolean_toggle"/>

                    <!-- Dates -->
                    <field name="create_date"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <!-- ================================= -->
        <!-- MEETING KANBAN VIEW -->
        <!-- ================================= -->

        <!-- Meeting Kanban View -->
        <record id="view_internship_meeting_kanban" model="ir.ui.view">
            <field name="name">internship.meeting.kanban</field>
            <field name="model">internship.meeting</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="meeting_type"/>
                    <field name="state"/>
                    <field name="start_datetime"/>
                    <field name="duration"/>
                    <field name="location"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="internship_id"/>
                    <field name="attendee_count"/>
                    <field name="has_online_link"/>
                    <field name="meeting_url"/>
                    <field name="priority"/>
                    <field name="activity_ids"/>
                    <field name="activity_state"/>

                    <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.state.raw_value)} oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="text-muted">
                                            <field name="meeting_type"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <span t-if="record.priority.raw_value == 'high'" class="badge badge-warning">High</span>
                                        <span t-if="record.priority.raw_value == 'urgent'" class="badge badge-danger">Urgent</span>
                                        <span t-if="record.has_online_link.raw_value" class="badge badge-info">
                                            <i class="fa fa-video-camera"/>
                                        </span>
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <i class="fa fa-calendar"/>
                                            <field name="start_datetime" widget="datetime"/>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <div class="col-6">
                                            <i class="fa fa-clock-o"/>
                                            <field name="duration" widget="float_time"/>h
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-users"/>
                                            <field name="attendee_count"/>
                                        </div>
                                    </div>
                                    <div class="row mt-1" t-if="record.location.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-map-marker"/>
                                            <field name="location"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <span class="badge badge-pill"
                                                  t-attf-style="background-color: #{record.meeting_type.raw_value == 'initial' ? '#17a2b8' : record.meeting_type.raw_value == 'follow_up' ? '#28a745' : record.meeting_type.raw_value == 'review' ? '#ffc107' : record.meeting_type.raw_value == 'final' ? '#6f42c1' : '#dc3545'};">
                                                <field name="meeting_type"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <div class="col-12">
                                            <small class="text-muted">
                                                <i class="fa fa-user"/> <field name="student_id"/>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <small class="text-muted">
                                                <i class="fa fa-user-tie"/> <field name="supervisor_id"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.has_online_link.raw_value and record.meeting_url.raw_value"
                                              class="badge badge-primary">
                                            Online
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- MEETING CALENDAR VIEW -->
        <!-- ================================= -->

        <!-- Meeting Calendar View -->
        <record id="view_internship_meeting_calendar" model="ir.ui.view">
            <field name="name">internship.meeting.calendar</field>
            <field name="model">internship.meeting</field>
            <field name="arch" type="xml">
                <calendar string="Meetings Calendar"
                          date_start="start_datetime"
                          date_stop="end_datetime"
                          color="meeting_type"
                          quick_add="True"
                          event_open_popup="True"
                          mode="month">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="location"/>
                    <field name="state"/>
                    <field name="meeting_type"/>
                </calendar>
            </field>
        </record>

        <!-- ================================= -->
        <!-- MEETING SEARCH VIEW -->
        <!-- ================================= -->

        <!-- Meeting Search View -->
        <record id="view_internship_meeting_search" model="ir.ui.view">
            <field name="name">internship.meeting.search</field>
            <field name="model">internship.meeting</field>
            <field name="arch" type="xml">
                <search string="Search Meetings">
                    <!-- Search Fields -->
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="internship_id"/>
                    <field name="location"/>

                    <!-- Quick Filters -->
                    <filter string="My Meetings" name="my_meetings"
                            domain="['|', ('student_id.user_id', '=', uid), ('supervisor_id.user_id', '=', uid)]"/>
                    <filter string="Today" name="today"
                            domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('start_datetime', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=1), datetime.time(0,0,0)))]"/>
                    <filter string="This Week" name="this_week"
                            domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today() - datetime.timedelta(days=context_today().weekday()), datetime.time(0,0,0))), ('start_datetime', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=7-context_today().weekday()), datetime.time(0,0,0)))]"/>
                    <filter string="Next Week" name="next_week"
                            domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today() + datetime.timedelta(days=7-context_today().weekday()), datetime.time(0,0,0))), ('start_datetime', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=14-context_today().weekday()), datetime.time(0,0,0)))]"/>
                    <filter string="Online Meetings" name="online_meetings"
                            domain="[('has_online_link', '=', True)]"/>
                    <filter string="Requires Follow-up" name="requires_followup"
                            domain="[('follow_up_required', '=', True)]"/>

                    <!-- State Filters -->
                    <separator/>
                    <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <filter string="Postponed" name="postponed" domain="[('state', '=', 'postponed')]"/>

                    <!-- Meeting Type Filters -->
                    <separator/>
                    <filter string="Initial Meeting" name="initial" domain="[('meeting_type', '=', 'initial')]"/>
                    <filter string="Follow-up" name="follow_up" domain="[('meeting_type', '=', 'follow_up')]"/>
                    <filter string="Review Meeting" name="review" domain="[('meeting_type', '=', 'review')]"/>
                    <filter string="Final Meeting" name="final" domain="[('meeting_type', '=', 'final')]"/>
                    <filter string="Emergency" name="emergency" domain="[('meeting_type', '=', 'emergency')]"/>
                    <filter string="Evaluation" name="evaluation" domain="[('meeting_type', '=', 'evaluation')]"/>

                    <!-- Priority Filters -->
                    <separator/>
                    <filter string="High Priority" name="high_priority" domain="[('priority', '=', 'high')]"/>
                    <filter string="Urgent" name="urgent" domain="[('priority', '=', 'urgent')]"/>

                    <!-- Date Filters -->
                    <separator/>
                    <filter string="Past Meetings" name="past" domain="[('start_datetime', '&lt;', datetime.datetime.now())]"/>
                    <filter string="Future Meetings" name="future" domain="[('start_datetime', '&gt;=', datetime.datetime.now())]"/>
                    <filter string="This Month" name="this_month"
                            domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today().replace(day=1), datetime.time(0,0,0))), ('start_datetime', '&lt;', datetime.datetime.combine((context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1), datetime.time(0,0,0)))]"/>

                    <!-- Group By -->
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Meeting Type" name="group_type" context="{'group_by': 'meeting_type'}"/>
                        <filter string="Student" name="group_student" context="{'group_by': 'student_id'}"/>
                        <filter string="Supervisor" name="group_supervisor" context="{'group_by': 'supervisor_id'}"/>
                        <filter string="Internship" name="group_internship" context="{'group_by': 'internship_id'}"/>
                        <filter string="Location" name="group_location" context="{'group_by': 'location'}"/>
                        <filter string="Start Date" name="group_start_date" context="{'group_by': 'start_datetime:month'}"/>
                        <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================= -->
        <!-- MEETING FORM VIEW -->
        <!-- ================================= -->

        <!-- Meeting Form View -->
        <record id="view_internship_meeting_form" model="ir.ui.view">
            <field name="name">internship.meeting.form</field>
            <field name="model">internship.meeting</field>
            <field name="arch" type="xml">
                <form string="Meeting">
                    <header>
                        <!-- Action Buttons -->
                        <button name="action_confirm" string="Confirm Meeting" type="object"
                                class="oe_highlight"
                                help="Confirm the scheduled meeting"
                                attrs="{'invisible': [('state', '!=', 'scheduled')]}"/>

                        <button name="action_start" string="Start Meeting" type="object"
                                class="oe_highlight"
                                help="Start the confirmed meeting"
                                attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>

                        <button name="action_complete" string="Complete Meeting" type="object"
                                class="oe_highlight"
                                help="Mark meeting as completed"
                                attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>

                        <button name="action_postpone" string="Postpone" type="object"
                                help="Postpone the meeting"
                                attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>

                        <button name="action_cancel" string="Cancel Meeting" type="object"
                                help="Cancel the meeting"
                                attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>

                        <button name="action_reschedule" string="Reschedule" type="object"
                                help="Reschedule the meeting"
                                attrs="{'invisible': [('state', 'in', ['completed', 'in_progress'])]}"/>

                        <button name="action_send_invitation" string="Send Invitations" type="object"
                                help="Send meeting invitations to attendees"
                                attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>

                        <button name="action_join_online" string="Join Online Meeting" type="object"
                                class="btn-info"
                                help="Join the online meeting"
                                attrs="{'invisible': ['|', ('has_online_link', '=', False), ('meeting_url', '=', False)]}"
                                icon="fa-video-camera"/>

                        <!-- Status Bar -->
                        <field name="state" widget="statusbar" statusbar_visible="scheduled,confirmed,in_progress,completed"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Smart Buttons -->
                            <button class="oe_stat_button" type="object" name="action_view_attendees" icon="fa-users">
                                <field string="Attendees" name="attendee_count" widget="statinfo"/>
                            </button>

                            <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text"
                                    attrs="{'invisible': [('document_count', '=', 0)]}">
                                <field string="Documents" name="document_count" widget="statinfo"/>
                            </button>

                            <button class="oe_stat_button" type="object" name="action_view_follow_up_tasks" icon="fa-tasks"
                                    attrs="{'invisible': [('follow_up_task_count', '=', 0)]}">
                                <field string="Follow-up Tasks" name="follow_up_task_count" widget="statinfo"/>
                            </button>

                            <div class="oe_stat_button" t-if="record.has_online_link.raw_value">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Online Meeting</span>
                                </div>
                            </div>

                            <div class="oe_stat_button" t-if="record.is_recurring.raw_value">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Recurring</span>
                                </div>
                            </div>
                        </div>

                        <!-- Title and Reference -->
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="Meeting title..."/></h1>
                        </div>

                        <!-- Main Information -->
                        <group>
                            <group name="meeting_info" string="Meeting Information">
                                <field name="meeting_type"/>
                                <field name="priority"/>
                                <field name="internship_id"/>
                                <field name="state" invisible="1"/>
                            </group>
                            <group name="participants" string="Participants">
                                <field name="student_id"/>
                                <field name="supervisor_id"/>
                                <field name="organizer_id"/>
                            </group>
                        </group>

                        <!-- Schedule Information -->
                        <group>
                            <group name="schedule" string="Schedule">
                                <field name="start_datetime"/>
                                <field name="duration" widget="float_time"/>
                                <field name="end_datetime" readonly="1"/>
                                <field name="timezone"/>
                            </group>
                            <group name="location_info" string="Location">
                                <field name="location"/>
                                <field name="has_online_link"/>
                                <field name="meeting_url" widget="url"
                                       attrs="{'invisible': [('has_online_link', '=', False)], 'required': [('has_online_link', '=', True)]}"/>
                                <field name="meeting_platform"
                                       attrs="{'invisible': [('has_online_link', '=', False)]}"/>
                            </group>
                        </group>

                        <!-- Recurring Settings -->
                        <group name="recurring_group" string="Recurring Settings" attrs="{'invisible': [('is_recurring', '=', False)]}">
                            <group>
                                <field name="is_recurring"/>
                                <field name="recurring_frequency" attrs="{'invisible': [('is_recurring', '=', False)], 'required': [('is_recurring', '=', True)]}"/>
                                <field name="recurring_until" attrs="{'invisible': [('is_recurring', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="recurring_count" attrs="{'invisible': [('is_recurring', '=', False)]}"/>
                                <field name="next_occurrence_date" readonly="1" attrs="{'invisible': [('is_recurring', '=', False)]}"/>
                            </group>
                        </group>

                        <!-- Additional Information -->
                        <notebook>
                            <page name="agenda" string="Agenda &amp; Objectives">
                                <group>
                                    <field name="agenda" nolabel="1" placeholder="Meeting agenda and topics to discuss..."/>
                                </group>

                                <separator string="Meeting Objectives"/>
                                <field name="objectives" nolabel="1" placeholder="What should be achieved in this meeting..."/>
                            </page>

                            <page name="attendees" string="Attendees">
                                <field name="attendee_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="user_id"/>
                                        <field name="role"/>
                                        <field name="attendance_status"/>
                                        <field name="required_attendance"/>
                                        <field name="invitation_sent"/>
                                        <field name="response_date"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="preparation" string="Preparation">
                                <group>
                                    <group name="prep_materials" string="Required Materials">
                                        <field name="required_materials" nolabel="1"/>
                                    </group>
                                    <group name="prep_documents" string="Preparation Documents">
                                        <field name="preparation_document_ids" nolabel="1">
                                            <tree>
                                                <field name="name"/>
                                                <field name="document_type"/>
                                                <field name="uploaded_by"/>
                                                <field name="create_date"/>
                                            </tree>
                                        </field>
                                    </group>
                                </group>
                            </page>

                            <page name="notes" string="Meeting Notes" attrs="{'invisible': [('state', 'in', ['scheduled', 'confirmed'])]}">
                                <group>
                                    <field name="notes" nolabel="1" placeholder="Meeting notes, discussions, and decisions..."/>
                                </group>

                                <separator string="Key Decisions"/>
                                <field name="decisions" nolabel="1" placeholder="Important decisions made during the meeting..."/>

                                <separator string="Action Items"/>
                                <field name="action_items" nolabel="1" placeholder="Tasks and actions to be completed after the meeting..."/>
                            </page>

                            <page name="follow_up" string="Follow-up">
                                <group>
                                    <group name="followup_info" string="Follow-up Information">
                                        <field name="follow_up_required"/>
                                        <field name="next_meeting_date" attrs="{'invisible': [('follow_up_required', '=', False)]}"/>
                                        <field name="follow_up_deadline" attrs="{'invisible': [('follow_up_required', '=', False)]}"/>
                                    </group>
                                    <group name="followup_responsible" string="Responsible">
                                        <field name="follow_up_responsible_id" attrs="{'invisible': [('follow_up_required', '=', False)]}"/>
                                        <field name="auto_create_tasks" attrs="{'invisible': [('follow_up_required', '=', False)]}"/>
                                    </group>
                                </group>

                                <separator string="Follow-up Notes" attrs="{'invisible': [('follow_up_required', '=', False)]}"/>
                                <field name="follow_up_notes" nolabel="1" attrs="{'invisible': [('follow_up_required', '=', False)]}"
                                       placeholder="Follow-up actions and next steps..."/>
                            </page>

                            <page name="evaluation" string="Meeting Evaluation" attrs="{'invisible': [('state', '!=', 'completed')]}">
                                <group>
                                    <group name="eval_ratings" string="Ratings">
                                        <field name="effectiveness_rating"/>
                                        <field name="preparation_rating"/>
                                        <field name="participation_rating"/>
                                        <field name="overall_rating"/>
                                    </group>
                                    <group name="eval_feedback" string="Feedback">
                                        <field name="student_feedback" readonly="1"/>
                                        <field name="supervisor_feedback" readonly="1"/>
                                    </group>
                                </group>

                                <separator string="Meeting Evaluation Comments"/>
                                <field name="evaluation_comments" nolabel="1"
                                       placeholder="Overall evaluation and feedback about the meeting..."/>
                            </page>

                            <page name="attachments" string="Attachments &amp; Documents">
                                <field name="attachment_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="file_size"/>
                                        <field name="mimetype"/>
                                        <field name="create_date"/>
                                        <field name="create_uid"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="history" string="Meeting History">
                                <field name="history_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="action"/>
                                        <field name="user_id"/>
                                        <field name="action_date"/>
                                        <field name="previous_state"/>
                                        <field name="new_state"/>
                                        <field name="comments"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="technical" string="Technical Details">
                                <group>
                                    <group name="creation_info" string="Creation Information">
                                        <field name="create_date" readonly="1"/>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                        <field name="write_uid" readonly="1"/>
                                    </group>
                                    <group name="system_info" string="System Information">
                                        <field name="active"/>
                                        <field name="sequence"/>
                                        <field name="meeting_id" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ================================= -->
        <!-- ACTIONS -->
        <!-- ================================= -->

        <!-- Main Meeting Action -->
        <record id="action_internship_meeting_list" model="ir.actions.act_window">
            <field name="name">Meetings</field>
            <field name="res_model">internship.meeting</field>
            <field name="view_mode">calendar,kanban,tree,form</field>
            <field name="context">{'search_default_future': 1, 'search_default_my_meetings': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Schedule your first meeting!
                </p>
                <p>
                    Organize meetings with students and supervisors to track internship progress.
                </p>
            </field>
        </record>

        <!-- My Meetings Action -->
        <record id="action_internship_meeting_my" model="ir.actions.act_window">
            <field name="name">My Meetings</field>
            <field name="res_model">internship.meeting</field>
            <field name="view_mode">calendar,kanban,tree,form</field>
            <field name="domain">['|', ('student_id.user_id', '=', uid), ('supervisor_id.user_id', '=', uid)]</field>
            <field name="context">{'search_default_future': 1}</field>
        </record>

        <!-- Today's Meetings Action -->
        <record id="action_internship_meeting_today" model="ir.actions.act_window">
            <field name="name">Today's Meetings</field>
            <field name="res_model">internship.meeting</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[
                ('start_datetime', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                ('start_datetime', '&lt;', datetime.datetime.combine(context_today() + datetime.timedelta(days=1), datetime.time(0,0,0)))
            ]</field>
            <field name="context">{'search_default_my_meetings': 1}</field>
        </record>

        <!-- Upcoming Meetings Action -->
       <record id="action_internship_meeting_upcoming" model="ir.actions.act_window">
           <field name="name">Upcoming Meetings</field>
           <field name="res_model">internship.meeting</field>
           <field name="view_mode">kanban,tree,calendar,form</field>
           <field name="domain">[('start_datetime', '&gt;=', datetime.datetime.now())]</field>
           <field name="context">{'search_default_my_meetings': 1, 'search_default_confirmed': 1}</field>
       </record>

       <!-- Meetings to Confirm Action -->
       <record id="action_internship_meeting_to_confirm" model="ir.actions.act_window">
           <field name="name">Meetings to Confirm</field>
           <field name="res_model">internship.meeting</field>
           <field name="view_mode">kanban,tree,form</field>
           <field name="domain">[('state', '=', 'scheduled')]</field>
           <field name="context">{'search_default_my_meetings': 1}</field>
           <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">
                   No meetings to confirm!
               </p>
               <p>
                   Meetings that need confirmation will appear here.
               </p>
           </field>
       </record>

       <!-- Completed Meetings Action -->
       <record id="action_internship_meeting_completed" model="ir.actions.act_window">
           <field name="name">Completed Meetings</field>
           <field name="res_model">internship.meeting</field>
           <field name="view_mode">tree,form</field>
           <field name="domain">[('state', '=', 'completed')]</field>
           <field name="context">{'search_default_my_meetings': 1}</field>
       </record>

       <!-- Online Meetings Action -->
       <record id="action_internship_meeting_online" model="ir.actions.act_window">
           <field name="name">Online Meetings</field>
           <field name="res_model">internship.meeting</field>
           <field name="view_mode">kanban,tree,calendar,form</field>
           <field name="domain">[('has_online_link', '=', True)]</field>
           <field name="context">{'search_default_future': 1}</field>
       </record>

       <!-- Meeting Reports Action -->
       <record id="action_internship_meeting_reports" model="ir.actions.act_window">
           <field name="name">Meeting Reports</field>
           <field name="res_model">internship.meeting</field>
           <field name="view_mode">graph,pivot,tree</field>
           <field name="context">{
               'group_by': ['meeting_type', 'state'],
               'search_default_completed': 1
           }</field>
       </record>

       <!-- ================================= -->
       <!-- PIVOT AND GRAPH VIEWS -->
       <!-- ================================= -->

       <!-- Meeting Pivot View -->
       <record id="view_internship_meeting_pivot" model="ir.ui.view">
           <field name="name">internship.meeting.pivot</field>
           <field name="model">internship.meeting</field>
           <field name="arch" type="xml">
               <pivot string="Meeting Analysis">
                   <field name="meeting_type" type="row"/>
                   <field name="state" type="col"/>
                   <field name="duration" type="measure"/>
                   <field name="attendee_count" type="measure"/>
               </pivot>
           </field>
       </record>

       <!-- Meeting Graph View -->
       <record id="view_internship_meeting_graph" model="ir.ui.view">
           <field name="name">internship.meeting.graph</field>
           <field name="model">internship.meeting</field>
           <field name="arch" type="xml">
               <graph string="Meeting Statistics" type="bar">
                   <field name="meeting_type"/>
                   <field name="duration" type="measure"/>
               </graph>
           </field>
       </record>

       <!-- ================================= -->
       <!-- ATTENDEE SUB-VIEWS -->
       <!-- ================================= -->

       <!-- Meeting Attendee Tree View -->
       <record id="view_internship_meeting_attendee_tree" model="ir.ui.view">
           <field name="name">internship.meeting.attendee.tree</field>
           <field name="model">internship.meeting.attendee</field>
           <field name="arch" type="xml">
               <tree string="Meeting Attendees" editable="bottom">
                   <field name="meeting_id"/>
                   <field name="user_id"/>
                   <field name="role"/>
                   <field name="attendance_status" widget="badge"/>
                   <field name="required_attendance" widget="boolean_toggle"/>
                   <field name="invitation_sent" widget="boolean_toggle"/>
                   <field name="response_date"/>
                   <field name="notes"/>
               </tree>
           </field>
       </record>

       <!-- Meeting Attendee Form View -->
       <record id="view_internship_meeting_attendee_form" model="ir.ui.view">
           <field name="name">internship.meeting.attendee.form</field>
           <field name="model">internship.meeting.attendee</field>
           <field name="arch" type="xml">
               <form string="Meeting Attendee">
                   <sheet>
                       <group>
                           <group name="attendee_info" string="Attendee Information">
                               <field name="meeting_id"/>
                               <field name="user_id"/>
                               <field name="role"/>
                           </group>
                           <group name="attendance_info" string="Attendance">
                               <field name="attendance_status"/>
                               <field name="required_attendance"/>
                               <field name="invitation_sent"/>
                               <field name="response_date"/>
                           </group>
                       </group>

                       <group name="notes" string="Notes">
                           <field name="notes" nolabel="1"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>

       <!-- Meeting Attendee Action -->
       <record id="action_internship_meeting_attendee_list" model="ir.actions.act_window">
           <field name="name">Meeting Attendees</field>
           <field name="res_model">internship.meeting.attendee</field>
           <field name="view_mode">tree,form</field>
       </record>

       <!-- ================================= -->
       <!-- WIZARDS AND AUTOMATED ACTIONS -->
       <!-- ================================= -->

       <!-- Meeting Wizard: Bulk Reschedule -->
       <record id="action_meeting_bulk_reschedule" model="ir.actions.act_window">
           <field name="name">Bulk Reschedule Meetings</field>
           <field name="res_model">internship.meeting.reschedule.wizard</field>
           <field name="view_mode">form</field>
           <field name="target">new</field>
           <field name="binding_model">internship.meeting</field>
       </record>

       <!-- Meeting Wizard: Send Invitations -->
       <record id="action_meeting_send_invitations" model="ir.actions.act_window">
           <field name="name">Send Meeting Invitations</field>
           <field name="res_model">internship.meeting.invitation.wizard</field>
           <field name="view_mode">form</field>
           <field name="target">new</field>
           <field name="binding_model">internship.meeting</field>
       </record>

       <!-- Meeting Wizard: Generate Report -->
       <record id="action_meeting_generate_report" model="ir.actions.act_window">
           <field name="name">Generate Meeting Report</field>
           <field name="res_model">internship.meeting.report.wizard</field>
           <field name="view_mode">form</field>
           <field name="target">new</field>
           <field name="binding_model">internship.meeting</field>
       </record>

       <!-- ================================= -->
       <!-- CONTEXT ACTIONS -->
       <!-- ================================= -->

       <!-- Action: Duplicate Meeting -->
       <record id="action_meeting_duplicate" model="ir.actions.server">
           <field name="name">Duplicate Meeting</field>
           <field name="model_id" ref="model_internship_meeting"/>
           <field name="binding_model">internship.meeting</field>
           <field name="state">code</field>
           <field name="code">
               for record in records:
                   record.copy({'name': record.name + ' (Copy)', 'state': 'scheduled'})
           </field>
       </record>

       <!-- Action: Mark as Completed -->
       <record id="action_meeting_mark_completed" model="ir.actions.server">
           <field name="name">Mark as Completed</field>
           <field name="model_id" ref="model_internship_meeting"/>
           <field name="binding_model">internship.meeting</field>
           <field name="state">code</field>
           <field name="code">
               for record in records:
                   if record.state == 'in_progress':
                       record.action_complete()
           </field>
       </record>

       <!-- Action: Send Reminder -->
       <record id="action_meeting_send_reminder" model="ir.actions.server">
           <field name="name">Send Reminder</field>
           <field name="model_id" ref="model_internship_meeting"/>
           <field name="binding_model">internship.meeting</field>
           <field name="state">code</field>
           <field name="code">
               for record in records:
                   record.action_send_reminder()
           </field>
       </record>
   </data>
</odoo>