<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Dashboard Main Template -->
        <template id="dashboard_template" name="Internship Dashboard">
            <t t-call="web.html_container">
                <div class="o_internship_dashboard">
                    <!-- Include Chart.js for visualizations -->
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>

                    <!-- Dashboard Header -->
                    <div class="o_dashboard_header bg-primary text-white py-4 mb-4">
                        <div class="container-fluid">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h1 class="h2 mb-0">
                                        <i class="fa fa-tachometer-alt"/> Internship Management Dashboard
                                    </h1>
                                    <p class="mb-0 opacity-75">
                                        Welcome back, <span t-esc="user.name"/> -
                                        <span t-esc="user_role.title()"/> Dashboard
                                    </p>
                                </div>
                                <div class="col-md-4 text-right">
                                    <small class="d-block">Last updated: <span t-esc="current_date"/></small>
                                    <small class="d-block">Version: <span t-esc="dashboard_version"/></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container-fluid">
                        <!-- KPI Cards Row -->
                        <div class="row mb-4">
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                    My Internships
                                                </div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                    <span t-esc="role_stats.get('my_internships_count', 0)"/>
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-briefcase fa-2x text-gray-300"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="card border-left-success shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                    In Progress
                                                </div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                    <span t-esc="role_stats.get('my_internships_in_progress', 0)"/>
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-play-circle fa-2x text-gray-300"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="card border-left-info shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                    Average Progress
                                                </div>
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col-auto">
                                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                                            <span t-esc="role_stats.get('my_average_progress', 0)"/>%
                                                        </div>
                                                    </div>
                                                    <div class="col">
                                                        <div class="progress progress-sm mr-2">
                                                            <div class="progress-bar bg-info" role="progressbar"
                                                                 t-attf-style="width: #{role_stats.get('my_average_progress', 0)}%"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-chart-line fa-2x text-gray-300"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="card border-left-warning shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                    Average Grade
                                                </div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                    <span t-esc="role_stats.get('my_average_grade', 0)"/>/20
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-star fa-2x text-gray-300"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Charts Row -->
                        <div class="row mb-4">
                            <!-- Status Distribution Chart -->
                            <div class="col-xl-6 col-lg-6">
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary">Internship Status Distribution</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="chart-container" style="position: relative; height: 300px;">
                                            <canvas id="statusChart"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Progress Distribution Chart -->
                            <div class="col-xl-6 col-lg-6">
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary">Progress Distribution</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="chart-container" style="position: relative; height: 300px;">
                                            <canvas id="progressChart"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Activities and Deadlines Row -->
                        <div class="row">
                            <!-- Recent Activities -->
                            <div class="col-lg-8 mb-4">
                                <div class="card shadow">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">
                                            <i class="fa fa-clock"/> Recent Activities
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="timeline">
                                            <t t-foreach="recent_activities[:5]" t-as="activity">
                                                <div class="timeline-item">
                                                    <div class="timeline-marker">
                                                        <i t-attf-class="fa #{activity.get('icon', 'fa-info')} text-#{activity.get('color', 'primary')}"/>
                                                    </div>
                                                    <div class="timeline-content">
                                                        <h6 class="timeline-title" t-esc="activity.get('title', '')"/>
                                                        <p class="timeline-text" t-esc="activity.get('message', '')"/>
                                                        <small class="text-muted" t-esc="activity.get('date', '')"/>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Upcoming Deadlines -->
                            <div class="col-lg-4 mb-4">
                                <div class="card shadow">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">
                                            <i class="fa fa-exclamation-triangle"/> Upcoming Deadlines
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <t t-if="not upcoming_deadlines">
                                            <div class="text-center text-muted py-4">
                                                <i class="fa fa-check-circle fa-3x mb-3"/>
                                                <p>No upcoming deadlines!</p>
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <t t-foreach="upcoming_deadlines[:5]" t-as="deadline">
                                                <div class="deadline-item mb-3 p-2 border-left-warning">
                                                    <h6 class="mb-1" t-esc="deadline.get('title', '')"/>
                                                    <small class="text-muted">
                                                        Due: <span t-esc="deadline.get('deadline', '')"/>
                                                    </small>
                                                    <div>
                                                        <span t-attf-class="badge badge-#{deadline.get('priority') == 'urgent' and 'danger' or deadline.get('priority') == 'high' and 'warning' or 'info'}"
                                                              t-esc="deadline.get('priority', '').title()"/>
                                                    </div>
                                                </div>
                                            </t>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card shadow">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">
                                            <i class="fa fa-bolt"/> Quick Actions
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-3 mb-2">
                                                <a href="/web#action=internship_management.action_internship_stage_list&amp;view_type=form"
                                                   class="btn btn-primary btn-block">
                                                    <i class="fa fa-plus"/> New Internship
                                                </a>
                                            </div>
                                            <div class="col-md-3 mb-2">
                                                <a href="/web#action=internship_management.action_internship_meeting_list&amp;view_type=form"
                                                   class="btn btn-info btn-block">
                                                    <i class="fa fa-calendar-plus"/> Schedule Meeting
                                                </a>
                                            </div>
                                            <div class="col-md-3 mb-2">
                                                <a href="/web#action=internship_management.action_internship_document_list"
                                                   class="btn btn-success btn-block">
                                                    <i class="fa fa-upload"/> Upload Document
                                                </a>
                                            </div>
                                            <div class="col-md-3 mb-2">
                                                <a href="/internship/dashboard/export?format=pdf"
                                                   class="btn btn-secondary btn-block">
                                                    <i class="fa fa-download"/> Export Report
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Chart JavaScript -->
                    <script type="text/javascript">
                        document.addEventListener('DOMContentLoaded', function() {
                            // Status Chart
                            var ctx1 = document.getElementById('statusChart').getContext('2d');
                            var statusChart = new Chart(ctx1, {
                                type: 'doughnut',
                                data: {
                                    labels: ['Draft', 'In Progress', 'Completed', 'Evaluated'],
                                    datasets: [{
                                        data: [
                                            <t t-esc="role_stats.get('my_internships_draft', 0)"/>,
                                            <t t-esc="role_stats.get('my_internships_in_progress', 0)"/>,
                                            <t t-esc="role_stats.get('my_internships_completed', 0)"/>,
                                            <t t-esc="role_stats.get('my_internships_evaluated', 0)"/>
                                        ],
                                        backgroundColor: ['#e74c3c', '#3498db', '#2ecc71', '#f39c12'],
                                        borderWidth: 2,
                                        borderColor: '#fff'
                                    }]
                                },
                                options: {
                                    responsive: true,
                                    maintainAspectRatio: false,
                                    plugins: {
                                        legend: {
                                            position: 'bottom'
                                        }
                                    }
                                }
                            });

                            // Progress Chart
                            var ctx2 = document.getElementById('progressChart').getContext('2d');
                            var progressChart = new Chart(ctx2, {
                                type: 'bar',
                                data: {
                                    labels: ['0-20%', '21-40%', '41-60%', '61-80%', '81-100%'],
                                    datasets: [{
                                        label: 'Number of Internships',
                                        data: [1, 2, 3, 4, 2], // Sample data - replace with real data
                                        backgroundColor: ['#e74c3c', '#f39c12', '#f1c40f', '#3498db', '#2ecc71'],
                                        borderColor: ['#c0392b', '#e67e22', '#f39c12', '#2980b9', '#27ae60'],
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    responsive: true,
                                    maintainAspectRatio: false,
                                    scales: {
                                        y: {
                                            beginAtZero: true
                                        }
                                    }
                                }
                            });
                        });
                    </script>

                    <!-- Custom CSS -->
                    <style>
                        .o_internship_dashboard {
                            font-family: 'Nunito', sans-serif;
                        }
                        .border-left-primary {
                            border-left: 0.25rem solid #4e73df !important;
                        }
                        .border-left-success {
                            border-left: 0.25rem solid #1cc88a !important;
                        }
                        .border-left-info {
                            border-left: 0.25rem solid #36b9cc !important;
                        }
                        .border-left-warning {
                            border-left: 0.25rem solid #f6c23e !important;
                        }
                        .timeline {
                            position: relative;
                            padding-left: 20px;
                        }
                        .timeline-item {
                            position: relative;
                            margin-bottom: 20px;
                            padding-left: 40px;
                        }
                        .timeline-marker {
                            position: absolute;
                            left: -30px;
                            top: 0;
                            width: 20px;
                            height: 20px;
                            background: #fff;
                            border: 2px solid #dee2e6;
                            border-radius: 50%;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                        }
                        .timeline-title {
                            font-size: 0.9rem;
                            font-weight: bold;
                            margin-bottom: 5px;
                        }
                        .timeline-text {
                            font-size: 0.85rem;
                            margin-bottom: 5px;
                        }
                        .deadline-item {
                            border-radius: 5px;
                            background: #f8f9fa;
                        }
                        .chart-container {
                            position: relative;
                        }
                    </style>
                </div>
            </t>
        </template>

        <!-- Dashboard Action -->
        <record id="action_internship_dashboard" model="ir.actions.act_url">
            <field name="name">Dashboard</field>
            <field name="url">/internship/dashboard</field>
            <field name="target">self</field>
        </record>

    </data>
</odoo>