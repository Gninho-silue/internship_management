<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- VUES LISTE (TREE) -->
        <!-- ================================= -->

        <!-- Message list view -->
        <record id="view_internship_message_tree" model="ir.ui.view">
            <field name="name">internship.message.tree</field>
            <field name="model">internship.message</field>
            <field name="arch" type="xml">
                <tree string="Messages"
                      decoration-info="state=='draft'"
                      decoration-warning="state=='sent'"
                      decoration-success="state=='read'"
                      decoration-muted="state=='archived'">
                    <field name="subject"/>
                    <field name="sender_id"/>
                    <field name="recipient_ids" widget="many2many_tags"/>
                    <field name="message_type"/>
                    <field name="priority" widget="priority"/>
                    <field name="state" widget="badge"
                           decoration-info="state=='draft'"
                           decoration-warning="state=='sent'"
                           decoration-success="state=='read'"
                           decoration-muted="state=='archived'"/>
                    <field name="create_date"/>
                    <field name="has_attachments" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Message Kanban View -->
        <record id="view_internship_message_kanban" model="ir.ui.view">
            <field name="name">internship.message.kanban</field>
            <field name="model">internship.message</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="id"/>
                    <field name="subject"/>
                    <field name="sender_id"/>
                    <field name="message_type"/>
                    <field name="priority"/>
                    <field name="state"/>
                    <field name="create_date"/>
                    <field name="has_attachments"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.priority.raw_value)} oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="subject"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <span t-if="record.priority.raw_value == '3'" class="badge badge-danger">Urgent</span>
                                        <span t-if="record.priority.raw_value == '2'" class="badge badge-warning">High</span>
                                        <span t-if="record.has_attachments.raw_value" class="badge badge-info">
                                            <i class="fa fa-paperclip"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <span class="badge badge-pill" t-attf-style="background-color: #{record.message_type.raw_value == 'notification' ? '#17a2b8' : record.message_type.raw_value == 'reminder' ? '#ffc107' : '#6c757d'};">
                                                <field name="message_type"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <i class="fa fa-user"/> From: <field name="sender_id"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <i class="fa fa-calendar"/> <field name="create_date" widget="date"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Message Search View -->
        <record id="view_internship_message_search" model="ir.ui.view">
            <field name="name">internship.message.search</field>
            <field name="model">internship.message</field>
            <field name="arch" type="xml">
                <search string="Search Messages">
                    <!-- Search Fields -->
                    <field name="subject"/>
                    <field name="sender_id"/>
                    <field name="recipient_ids"/>
                    <field name="body"/>

                    <!-- Filters -->
                    <filter string="My Messages" name="my_messages"
                            domain="['|', ('sender_id', '=', uid), ('recipient_ids', 'in', uid)]"/>
                    <filter string="Sent by Me" name="sent_by_me"
                            domain="[('sender_id', '=', uid)]"/>
                    <filter string="Received by Me" name="received_by_me"
                            domain="[('recipient_ids', 'in', uid)]"/>
                    <filter string="Unread" name="unread"
                            domain="[('state', 'in', ['draft', 'sent'])]"/>
                    <filter string="With Attachments" name="with_attachments"
                            domain="[('has_attachments', '=', True)]"/>

                    <!-- State Filters -->
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Read" name="read" domain="[('state', '=', 'read')]"/>
                    <filter string="Archived" name="archived" domain="[('state', '=', 'archived')]"/>

                    <!-- Type Filters -->
                    <separator/>
                    <filter string="General" name="general" domain="[('message_type', '=', 'general')]"/>
                    <filter string="Notification" name="notification" domain="[('message_type', '=', 'notification')]"/>
                    <filter string="Reminder" name="reminder" domain="[('message_type', '=', 'reminder')]"/>
                    <filter string="Alert" name="alert" domain="[('message_type', '=', 'alert')]"/>

                    <!-- Priority Filters -->
                   <separator/>
                   <filter string="Urgent" name="urgent" domain="[('priority', '=', '3')]"/>
                   <filter string="High Priority" name="high_priority" domain="[('priority', '=', '2')]"/>
                   <filter string="Normal Priority" name="normal_priority" domain="[('priority', '=', '1')]"/>
                   <filter string="Low Priority" name="low_priority" domain="[('priority', '=', '0')]"/>

                   <!-- Date Filters -->
                   <separator/>
                   <filter string="Today" name="today" domain="[('create_date', '&gt;=', context_today())]"/>
                   <filter string="This Week" name="this_week" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=7)))]"/>
                   <filter string="This Month" name="this_month" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=30)))]"/>

                   <!-- Group By -->
                   <group expand="0" string="Group By">
                       <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                       <filter string="Message Type" name="group_type" context="{'group_by': 'message_type'}"/>
                       <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                       <filter string="Sender" name="group_sender" context="{'group_by': 'sender_id'}"/>
                       <filter string="Date" name="group_date" context="{'group_by': 'create_date:month'}"/>
                   </group>
               </search>
           </field>
       </record>

       <!-- ================================= -->
       <!-- FORM VIEWS -->
       <!-- ================================= -->

       <!-- Message form view -->
       <record id="view_internship_message_form" model="ir.ui.view">
           <field name="name">internship.message.form</field>
           <field name="model">internship.message</field>
           <field name="arch" type="xml">
               <form string="Message">
                   <header>
                       <button name="action_send" string="Send" type="object"
                               class="oe_highlight"
                               help="Send the message"
                               attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                       <button name="action_mark_read" string="Mark as Read" type="object"
                               help="Mark message as read"
                               attrs="{'invisible': [('state', 'in', ['draft', 'read', 'archived'])]}"/>
                       <button name="action_archive" string="Archive" type="object"
                               help="Archive the message"
                               attrs="{'invisible': [('state', '=', 'archived')]}"/>
                       <button name="action_unarchive" string="Unarchive" type="object"
                               help="Unarchive the message"
                               attrs="{'invisible': [('state', '!=', 'archived')]}"/>
                       <field name="state" widget="statusbar" statusbar_visible="draft,sent,read"/>
                   </header>

                   <sheet>
                       <div class="oe_button_box" name="button_box">
                           <!-- Smart buttons -->
                           <button class="oe_stat_button" type="object" name="action_view_attachments" icon="fa-paperclip"
                                   attrs="{'invisible': [('has_attachments', '=', False)]}">
                               <field string="Attachments" name="attachment_count" widget="statinfo"/>
                           </button>

                           <button class="oe_stat_button" type="object" name="action_view_recipients" icon="fa-users">
                               <field string="Recipients" name="total_recipients" widget="statinfo"/>
                           </button>

                           <div class="oe_stat_button" t-if="record.read_count.raw_value > 0">
                               <div class="o_field_widget o_stat_info">
                                   <span class="o_stat_value">
                                       <field name="read_count"/>/<field name="total_recipients"/>
                                   </span>
                                   <span class="o_stat_text">Read</span>
                               </div>
                           </div>
                       </div>

                       <!-- Message Header -->
                       <div class="oe_title">
                           <label for="subject"/>
                           <h1><field name="subject" placeholder="Message subject..."/></h1>
                       </div>

                       <!-- Main Information -->
                       <group>
                           <group name="message_info" string="Message Information">
                               <field name="message_type"/>
                               <field name="priority"/>
                               <field name="internship_id"/>
                           </group>
                           <group name="recipients_info" string="Recipients">
                               <field name="sender_id" readonly="1"/>
                               <field name="recipient_ids" widget="many2many_tags"/>
                           </group>
                       </group>

                       <!-- Timing and Delivery -->
                       <group name="timing" string="Timing &amp; Delivery" attrs="{'invisible': [('message_type', '!=', 'reminder')]}">
                           <group>
                               <field name="scheduled_date"/>
                               <field name="recurring"/>
                               <field name="recurring_frequency" attrs="{'invisible': [('recurring', '=', False)], 'required': [('recurring', '=', True)]}"/>
                           </group>
                           <group>
                               <field name="expiry_date"/>
                               <field name="auto_delete_after_read"/>
                           </group>
                       </group>

                       <!-- Message Content -->
                       <notebook>
                           <page name="content" string="Message Content">
                               <group>
                                   <field name="body" nolabel="1" placeholder="Type your message here..."/>
                               </group>

                               <separator string="Attachments" attrs="{'invisible': [('has_attachments', '=', False)]}"/>
                               <field name="attachment_ids" nolabel="1" attrs="{'invisible': [('has_attachments', '=', False)]}">
                                   <tree>
                                       <field name="name"/>
                                       <field name="file_size"/>
                                       <field name="mimetype"/>
                                       <field name="create_date"/>
                                   </tree>
                               </field>
                           </page>

                           <page name="delivery_status" string="Delivery Status" attrs="{'invisible': [('state', '=', 'draft')]}">
                               <field name="delivery_status_ids" nolabel="1" readonly="1">
                                   <tree>
                                       <field name="recipient_id"/>
                                       <field name="delivery_status"/>
                                       <field name="delivered_date"/>
                                       <field name="read_date"/>
                                       <field name="delivery_attempts"/>
                                   </tree>
                               </field>
                           </page>

                           <page name="history" string="Message History" attrs="{'invisible': [('state', '=', 'draft')]}">
                               <field name="history_ids" nolabel="1" readonly="1">
                                   <tree>
                                       <field name="action"/>
                                       <field name="user_id"/>
                                       <field name="action_date"/>
                                       <field name="details"/>
                                   </tree>
                               </field>
                           </page>

                           <page name="template" string="Template Settings" attrs="{'invisible': [('message_type', '!=', 'template')]}">
                               <group>
                                   <group name="template_info" string="Template Information">
                                       <field name="template_name"/>
                                       <field name="template_category"/>
                                       <field name="is_system_template"/>
                                   </group>
                                   <group name="variables" string="Template Variables">
                                       <field name="template_variables" nolabel="1"/>
                                   </group>
                               </group>
                           </page>

                           <page name="metadata" string="Metadata">
                               <group>
                                   <group name="technical" string="Technical Information">
                                       <field name="message_id" readonly="1"/>
                                       <field name="thread_id" readonly="1"/>
                                       <field name="parent_message_id" readonly="1"/>
                                   </group>
                                   <group name="tracking" string="Tracking">
                                       <field name="read_receipt_requested"/>
                                       <field name="delivery_confirmation_requested"/>
                                       <field name="first_read_by" readonly="1"/>
                                       <field name="first_read_date" readonly="1"/>
                                   </group>
                               </group>

                               <group>
                                   <group name="creation" string="Creation">
                                       <field name="create_date" readonly="1"/>
                                       <field name="create_uid" readonly="1"/>
                                       <field name="write_date" readonly="1"/>
                                       <field name="write_uid" readonly="1"/>
                                   </group>
                                   <group name="system" string="System">
                                       <field name="active"/>
                                       <field name="sequence"/>
                                   </group>
                               </group>
                           </page>
                       </notebook>
                   </sheet>

                   <!-- Chatter -->
                   <div class="oe_chatter">
                       <field name="message_follower_ids"/>
                       <field name="activity_ids"/>
                       <field name="message_ids"/>
                   </div>
               </form>
           </field>
       </record>

       <!-- ================================= -->
       <!-- ACTIONS -->
       <!-- ================================= -->

       <!-- Main action for messages -->
       <record id="action_internship_message_list" model="ir.actions.act_window">
           <field name="name">Messages</field>
           <field name="res_model">internship.message</field>
           <field name="view_mode">kanban,tree,form</field>
           <field name="context">{'search_default_my_messages': 1}</field>
           <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">
                   Send your first message!
               </p>
               <p>
                   Communicate with students, supervisors, and other stakeholders.
               </p>
           </field>
       </record>

       <!-- My Inbox Action -->
       <record id="action_internship_message_inbox" model="ir.actions.act_window">
           <field name="name">My Inbox</field>
           <field name="res_model">internship.message</field>
           <field name="view_mode">kanban,tree,form</field>
           <field name="domain">[('recipient_ids', 'in', uid)]</field>
           <field name="context">{
               'search_default_received_by_me': 1,
               'search_default_unread': 1
           }</field>
       </record>

       <!-- Sent Messages Action -->
       <record id="action_internship_message_sent" model="ir.actions.act_window">
           <field name="name">Sent Messages</field>
           <field name="res_model">internship.message</field>
           <field name="view_mode">tree,form</field>
           <field name="domain">[('sender_id', '=', uid)]</field>
           <field name="context">{'search_default_sent_by_me': 1}</field>
       </record>

   </data>
</odoo>