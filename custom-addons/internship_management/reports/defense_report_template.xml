<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="defense_report_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="stage">
                <t t-call="internship_management.defense_report_template"/>
            </t>
        </t>
    </template>

    <template id="defense_report_template">
        <div class="page">
            <div class="oe_structure"/>
            
            <!-- En-tête -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h1 style="color: #2c3e50; margin-bottom: 20px;">
                            <strong>PROCÈS-VERBAL DE SOUTENANCE</strong>
                        </h1>
                        <h3 style="color: #7f8c8d; margin-bottom: 30px;">
                            Gestion des Stages - Techpal
                        </h3>
                    </div>
                </div>

                <!-- Informations du stage -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div style="border: 2px solid #3498db; border-radius: 10px; padding: 20px; background-color: #f8f9fa;">
                            <h4 style="color: #2c3e50; margin-bottom: 15px;">
                                <i class="fa fa-graduation-cap"></i> Informations du Stage
                            </h4>
                            <div class="row">
                                <div class="col-6">
                                    <p><strong>Sujet :</strong> <span t-field="stage.name"/></p>
                                    <p><strong>Stagiaire :</strong> <span t-field="stage.student_id.name"/></p>
                                    <p><strong>Encadrant :</strong> <span t-field="stage.supervisor_id.name"/></p>
                                </div>
                                <div class="col-6">
                                    <p><strong>Entreprise :</strong> <span t-field="stage.company_id.name"/></p>
                                    <p><strong>Date de soutenance :</strong> <span t-field="stage.defense_date" t-options='{"widget": "datetime"}'/></p>
                                    <p><strong>Salle :</strong> <span t-field="stage.defense_room"/></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Jury -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div style="border: 2px solid #e74c3c; border-radius: 10px; padding: 20px; background-color: #fdf2f2;">
                            <h4 style="color: #2c3e50; margin-bottom: 15px;">
                                <i class="fa fa-users"></i> Composition du Jury
                            </h4>
                            <div t-if="stage.jury_ids">
                                <ul style="list-style: none; padding: 0;">
                                    <li t-foreach="stage.jury_ids" t-as="member" style="margin-bottom: 5px;">
                                        <i class="fa fa-user"></i> <span t-field="member.name"/>
                                    </li>
                                </ul>
                            </div>
                            <div t-else="">
                                <p style="color: #7f8c8d; font-style: italic;">Aucun membre du jury assigné</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Présence -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div style="border: 2px solid #27ae60; border-radius: 10px; padding: 20px; background-color: #f0f9f0;">
                            <h4 style="color: #2c3e50; margin-bottom: 15px;">
                                <i class="fa fa-check-circle"></i> Présence à la Soutenance
                            </h4>
                            <div t-if="stage.defense_attendance">
                                <ul style="list-style: none; padding: 0;">
                                    <li t-foreach="stage.defense_attendance" t-as="attendee" style="margin-bottom: 5px;">
                                        <i class="fa fa-user-check"></i> <span t-field="attendee.name"/>
                                    </li>
                                </ul>
                            </div>
                            <div t-else="">
                                <p style="color: #7f8c8d; font-style: italic;">Aucune information de présence</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Procès-verbal -->
                <div class="row mb-4" t-if="stage.defense_report">
                    <div class="col-12">
                        <div style="border: 2px solid #9b59b6; border-radius: 10px; padding: 20px; background-color: #f8f4f8;">
                            <h4 style="color: #2c3e50; margin-bottom: 15px;">
                                <i class="fa fa-file-text"></i> Procès-Verbal
                            </h4>
                            <div t-field="stage.defense_report" t-options='{"widget": "html"}'/>
                        </div>
                    </div>
                </div>

                <!-- Notes du jury -->
                <div class="row mb-4" t-if="stage.defense_notes">
                    <div class="col-12">
                        <div style="border: 2px solid #f39c12; border-radius: 10px; padding: 20px; background-color: #fef9f0;">
                            <h4 style="color: #2c3e50; margin-bottom: 15px;">
                                <i class="fa fa-comments"></i> Notes du Jury
                            </h4>
                            <div t-field="stage.defense_notes" t-options='{"widget": "html"}'/>
                        </div>
                    </div>
                </div>

                <!-- Évaluation -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div style="border: 2px solid #34495e; border-radius: 10px; padding: 20px; background-color: #f4f6f8;">
                            <h4 style="color: #2c3e50; margin-bottom: 15px;">
                                <i class="fa fa-star"></i> Évaluation
                            </h4>
                            <div class="row">
                                <div class="col-6">
                                    <p><strong>Note de soutenance :</strong> 
                                        <span t-if="stage.defense_grade" t-field="stage.defense_grade" t-options='{"widget": "float_time"}'/>
                                        <span t-else="" style="color: #7f8c8d;">Non notée</span>
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p><strong>Note finale :</strong> 
                                        <span t-if="stage.grade" t-field="stage.grade" t-options='{"widget": "float_time"}'/>
                                        <span t-else="" style="color: #7f8c8d;">Non notée</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Signature -->
                <div class="row mt-5">
                    <div class="col-12 text-center">
                        <div style="border-top: 2px solid #bdc3c7; padding-top: 20px; margin-top: 30px;">
                            <p style="color: #7f8c8d; font-size: 12px;">
                                Document généré automatiquement le <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y à %H:%M')"/>
                            </p>
                            <p style="color: #7f8c8d; font-size: 12px;">
                                Système de Gestion des Stages - Techpal
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>
