    <!-- Rapport de soutenance -->
    <record id="action_defense_report" model="ir.actions.report">
        <field name="name">Procès-Verbal de Soutenance</field>
        <field name="model">internship.stage</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">internship_management.defense_report_document</field>
        <field name="report_file">internship_management.defense_report_document</field>
        <field name="print_report_name">'Procès-Verbal de Soutenance - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_internship_stage"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>

