<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Template pour le rapport de stage -->
        <template id="stage_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="stage">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            
                            <!-- En-tête -->
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h2>RAPPORT DE STAGE</h2>
                                    <h3 t-field="stage.name"/>
                                </div>
                            </div>
                            
                            <br/>
                            
                            <!-- Informations générales -->
                            <div class="row">
                                <div class="col-6">
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>Référence:</strong></td>
                                            <td t-field="stage.reference"/>
                                        </tr>
                                        <tr>
                                            <td><strong>Type de stage:</strong></td>
                                            <td>
                                                <span t-if="stage.stage_type == 'pfe'">PFE</span>
                                                <span t-elif="stage.stage_type == 'stage_ete'">Stage d'été</span>
                                                <span t-elif="stage.stage_type == 'stage_obs'">Stage d'observation</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Stagiaire:</strong></td>
                                            <td t-field="stage.student_id.name"/>
                                        </tr>
                                        <tr>
                                            <td><strong>Encadrant:</strong></td>
                                            <td t-field="stage.supervisor_id.name"/>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6">
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>Entreprise:</strong></td>
                                            <td t-field="stage.company_id.name"/>
                                        </tr>
                                        <tr>
                                            <td><strong>Période:</strong></td>
                                            <td>
                                                Du <span t-field="stage.start_date"/> 
                                                au <span t-field="stage.end_date"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Durée:</strong></td>
                                            <td><span t-field="stage.duration"/> jours</td>
                                        </tr>
                                        <tr>
                                            <td><strong>État:</strong></td>
                                            <td>
                                                <span class="badge badge-primary" t-if="stage.state == 'draft'">Brouillon</span>
                                                <span class="badge badge-info" t-if="stage.state == 'submitted'">Soumis</span>
                                                <span class="badge badge-warning" t-if="stage.state == 'approved'">Approuvé</span>
                                                <span class="badge badge-primary" t-if="stage.state == 'in_progress'">En cours</span>
                                                <span class="badge badge-success" t-if="stage.state == 'completed'">Terminé</span>
                                                <span class="badge badge-success" t-if="stage.state == 'evaluated'">Évalué</span>
                                                <span class="badge badge-secondary" t-if="stage.state == 'cancelled'">Annulé</span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            
                            <br/>
                            
                            <!-- Description -->
                            <div class="row">
                                <div class="col-12">
                                    <h4>Description du Stage</h4>
                                    <div t-field="stage.description"/>
                                </div>
                            </div>
                            
                            <br/>
                            
                            <!-- Objectifs -->
                            <div class="row" t-if="stage.objectives">
                                <div class="col-12">
                                    <h4>Objectifs</h4>
                                    <div t-field="stage.objectives"/>
                                </div>
                            </div>
                            
                            <br/>
                            
                            <!-- Tâches -->
                            <div class="row" t-if="stage.todo_ids">
                                <div class="col-12">
                                    <h4>Tâches du Stage</h4>
                                    <table class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Tâche</th>
                                                <th>Date limite</th>
                                                <th>Assigné à</th>
                                                <th>État</th>
                                                <th>Priorité</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="stage.todo_ids" t-as="task">
                                                <td t-field="task.name"/>
                                                <td t-field="task.deadline"/>
                                                <td t-field="task.assigned_to"/>
                                                <td>
                                                    <span class="badge badge-secondary" t-if="task.state == 'todo'">À faire</span>
                                                    <span class="badge badge-primary" t-if="task.state == 'in_progress'">En cours</span>
                                                    <span class="badge badge-success" t-if="task.state == 'done'">Terminé</span>
                                                </td>
                                                <td>
                                                    <span class="text-danger" t-if="task.priority == '3'">Haute</span>
                                                    <span class="text-warning" t-if="task.priority == '2'">Moyenne</span>
                                                    <span class="text-muted" t-if="task.priority == '1'">Basse</span>
                                                    <span class="text-muted" t-if="task.priority == '0'">Très basse</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                            <!-- Progression -->
                            <div class="row">
                                <div class="col-12">
                                    <h4>Progression</h4>
                                    <div class="progress" style="height: 30px;">
                                        <div class="progress-bar" role="progressbar" 
                                             t-attf-style="width: #{stage.progress}%"
                                             t-attf-aria-valuenow="#{stage.progress}"
                                             aria-valuemin="0" aria-valuemax="100">
                                            <span t-esc="stage.progress"/>%
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <br/>
                            
                            <!-- Évaluation si disponible -->
                            <div class="row" t-if="stage.state in ['completed', 'evaluated'] and stage.grade">
                                <div class="col-12">
                                    <h4>Évaluation</h4>
                                    <table class="table table-sm">
                                        <tr t-if="stage.grade">
                                            <td><strong>Note finale:</strong></td>
                                            <td><span t-field="stage.grade"/>/20</td>
                                        </tr>
                                        <tr t-if="stage.defense_grade">
                                            <td><strong>Note soutenance:</strong></td>
                                            <td><span t-field="stage.defense_grade"/>/20</td>
                                        </tr>
                                    </table>
                                    
                                    <div t-if="stage.feedback">
                                        <strong>Commentaires:</strong>
                                        <div t-field="stage.feedback"/>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="oe_structure"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Template pour la convention de stage -->
        <template id="convention_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="stage">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            
                            <!-- En-tête -->
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h2>CONVENTION DE STAGE</h2>
                                </div>
                            </div>
                            
                            <br/>
                            
                            <div class="row">
                                <div class="col-12">
                                    <p>
                                        La présente convention est établie entre :
                                    </p>
                                    
                                    <h5>L'ÉTABLISSEMENT :</h5>
                                    <p>
                                        <strong t-field="stage.company_id.name"/><br/>
                                        <span t-field="stage.company_id.street"/><br/>
                                        <span t-field="stage.company_id.zip"/> <span t-field="stage.company_id.city"/><br/>
                                        Tél: <span t-field="stage.company_id.phone"/><br/>
                                        Email: <span t-field="stage.company_id.email"/>
                                    </p>
                                    
                                    <h5>LE STAGIAIRE :</h5>
                                    <p>
                                        <strong t-field="stage.student_id.name"/><br/>
                                        <span t-field="stage.student_id.email"/><br/>
                                        <span t-field="stage.student_id.phone"/>
                                    </p>
                                    
                                    <h5>L'ENCADRANT :</h5>
                                    <p>
                                        <strong t-field="stage.supervisor_id.name"/><br/>
                                        <span t-field="stage.supervisor_id.email"/><br/>
                                        <span t-field="stage.supervisor_id.phone"/>
                                    </p>
                                    
                                    <br/>
                                    
                                    <h5>OBJET DU STAGE :</h5>
                                    <p><strong t-field="stage.name"/></p>
                                    
                                    <h5>DESCRIPTION :</h5>
                                    <div t-field="stage.description"/>
                                    
                                    <br/>
                                    
                                    <h5>DURÉE ET PÉRIODE :</h5>
                                    <p>
                                        Du <strong t-field="stage.start_date"/> au <strong t-field="stage.end_date"/><br/>
                                        Durée totale : <strong t-field="stage.duration"/> jours
                                    </p>
                                    
                                    <br/>
                                    
                                    <h5>SIGNATURES :</h5>
                                    <div class="row">
                                        <div class="col-4 text-center">
                                            <p><strong>Le Stagiaire</strong></p>
                                            <br/><br/>
                                            <p>_______________________</p>
                                            <p t-field="stage.student_id.name"/>
                                        </div>
                                        <div class="col-4 text-center">
                                            <p><strong>L'Encadrant</strong></p>
                                            <br/><br/>
                                            <p>_______________________</p>
                                            <p t-field="stage.supervisor_id.name"/>
                                        </div>
                                        <div class="col-4 text-center">
                                            <p><strong>L'Établissement</strong></p>
                                            <br/><br/>
                                            <p>_______________________</p>
                                            <p>Représentant légal</p>
                                        </div>
                                    </div>
                                    
                                    <br/>
                                    
                                    <p class="text-center">
                                        <small>
                                            Convention établie le <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                                        </small>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="oe_structure"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>