<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =============================== -->
    <!-- INTERNSHIP ALERT VIEWS -->
    <!-- =============================== -->

    <!-- Tree View for Alerts List -->
    <record id="view_internship_alert_tree" model="ir.ui.view">
        <field name="name">internship.alert.tree</field>
        <field name="model">internship.alert</field>
        <field name="arch" type="xml">
            <tree string="Alerts" decoration-danger="priority == '1'" decoration-warning="priority == '2'" decoration-info="priority == '3'">
                <field name="title"/>
                <field name="alert_type"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="student_id"/>
                <field name="supervisor_id"/>
                <field name="detected_date"/>
                <field name="escalation_level"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Alert Details -->
    <record id="view_internship_alert_form" model="ir.ui.view">
        <field name="name">internship.alert.form</field>
        <field name="model">internship.alert</field>
        <field name="arch" type="xml">
            <form string="Alert Details">
                <header>
                    <button name="action_acknowledge" string="Acknowledge" type="object" 
                            class="btn-primary" invisible="state != 'active'"/>
                    <button name="action_resolve" string="Resolve" type="object" 
                            class="btn-success" invisible="state not in ['active', 'acknowledged']"/>
                    <button name="action_dismiss" string="Dismiss" type="object" 
                            class="btn-secondary" invisible="state not in ['active', 'acknowledged']"/>
                    <button name="action_escalate" string="Escalate" type="object" 
                            class="btn-warning" invisible="state not in ['active', 'acknowledged']"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,acknowledged,resolved"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="title" placeholder="Alert Title"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="alert_type"/>
                            <field name="priority"/>
                            <field name="escalation_level"/>
                        </group>
                        <group>
                            <field name="detected_date"/>
                            <field name="acknowledged_date" readonly="1"/>
                            <field name="resolved_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="stage_id"/>
                            <field name="student_id"/>
                        </group>
                        <group>
                            <field name="supervisor_id"/>
                            <field name="task_id"/>
                            <field name="document_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" nolabel="1"/>
                        </page>
                        <page string="Suggested Action" name="suggested_action">
                            <field name="suggested_action" nolabel="1"/>
                        </page>
                        <page string="Notifications" name="notifications">
                            <group>
                                <field name="notification_sent"/>
                                <field name="notification_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View for Alerts -->
    <record id="view_internship_alert_search" model="ir.ui.view">
        <field name="name">internship.alert.search</field>
        <field name="model">internship.alert</field>
        <field name="arch" type="xml">
            <search string="Search Alerts">
                <field name="title"/>
                <field name="student_id"/>
                <field name="supervisor_id"/>
                <field name="stage_id"/>
                
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', '1')]"/>
                <filter string="Medium Priority" name="medium_priority" domain="[('priority', '=', '2')]"/>
                <filter string="Low Priority" name="low_priority" domain="[('priority', '=', '3')]"/>
                
                <separator/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Acknowledged" name="acknowledged" domain="[('state', '=', 'acknowledged')]"/>
                <filter string="Resolved" name="resolved" domain="[('state', '=', 'resolved')]"/>
                <filter string="Dismissed" name="dismissed" domain="[('state', '=', 'dismissed')]"/>
                
                <separator/>
                <filter string="Task Overdue" name="task_overdue" domain="[('alert_type', '=', 'task_overdue')]"/>
                <filter string="Deadline Approaching" name="deadline_approaching" domain="[('alert_type', '=', 'deadline_approaching')]"/>
                <filter string="Internship Blocked" name="internship_blocked" domain="[('alert_type', '=', 'internship_blocked')]"/>
                
                <separator/>
                <filter string="Today" name="today" domain="[('detected_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('detected_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="This Week" name="this_week" domain="[('detected_date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('detected_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Alert Type" name="group_alert_type" context="{'group_by': 'alert_type'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Student" name="group_student" context="{'group_by': 'student_id'}"/>
                    <filter string="Supervisor" name="group_supervisor" context="{'group_by': 'supervisor_id'}"/>
                    <filter string="Detection Date" name="group_detected_date" context="{'group_by': 'detected_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View for Alerts Dashboard -->
    <record id="view_internship_alert_kanban" model="ir.ui.view">
        <field name="name">internship.alert.kanban</field>
        <field name="model">internship.alert</field>
        <field name="arch" type="xml">
            <kanban string="Alerts Dashboard" class="o_kanban_small_column">
                <field name="priority"/>
                <field name="alert_type"/>
                <field name="state"/>
                <field name="title"/>
                <field name="student_id"/>
                <field name="supervisor_id"/>
                <field name="detected_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="title"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_priority" t-if="record.priority.raw_value == '1'">
                                        <span class="fa fa-exclamation-triangle text-danger" title="High Priority"/>
                                    </div>
                                    <div class="o_kanban_record_priority" t-if="record.priority.raw_value == '2'">
                                        <span class="fa fa-exclamation-circle text-warning" title="Medium Priority"/>
                                    </div>
                                    <div class="o_kanban_record_priority" t-if="record.priority.raw_value == '3'">
                                        <span class="fa fa-info-circle text-info" title="Low Priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_details">
                                        <div class="o_kanban_record_subtitle">
                                            <field name="alert_type"/>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="student_id"/>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="supervisor_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="detected_date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View for Alerts -->
    <record id="view_internship_alert_calendar" model="ir.ui.view">
        <field name="name">internship.alert.calendar</field>
        <field name="model">internship.alert</field>
        <field name="arch" type="xml">
            <calendar string="Alerts Calendar" date_start="detected_date" color="priority">
                <field name="title"/>
                <field name="alert_type"/>
                <field name="priority"/>
                <field name="student_id"/>
            </calendar>
        </field>
    </record>


    <!-- Graph View for Alerts Statistics -->
    <record id="view_internship_alert_graph" model="ir.ui.view">
        <field name="name">internship.alert.graph</field>
        <field name="model">internship.alert</field>
        <field name="arch" type="xml">
            <graph string="Alerts Statistics" type="bar">
                <field name="alert_type" type="row"/>
                <field name="id" type="measure" string="Count"/>
            </graph>
        </field>
    </record>

    <!-- =============================== -->
    <!-- ACTIONS AND MENUS -->
    <!-- =============================== -->

    <!-- Action for Alerts List -->
    <record id="action_internship_alert" model="ir.actions.act_window">
        <field name="name">Alerts</field>
        <field name="res_model">internship.alert</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="search_view_id" ref="view_internship_alert_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No alerts found!
            </p>
            <p>
                Alerts are automatically generated when issues are detected in the internship process.
            </p>
        </field>
    </record>

    <!-- Action for High Priority Alerts -->
    <record id="action_internship_alert_high_priority" model="ir.actions.act_window">
        <field name="name">High Priority Alerts</field>
        <field name="res_model">internship.alert</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('priority', '=', '1'), ('state', '=', 'active')]</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Action for My Alerts (Student/Supervisor) -->
    <record id="action_internship_alert_my_alerts" model="ir.actions.act_window">
        <field name="name">My Alerts</field>
        <field name="res_model">internship.alert</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No alerts for you!
            </p>
            <p>
                You will see alerts related to your internships here.
            </p>
        </field>
    </record>

    <!-- Action for Testing Alerts -->
    <record id="action_internship_alert_test" model="ir.actions.server">
        <field name="name">Test Alert System</field>
        <field name="model_id" ref="model_internship_alert"/>
        <field name="state">code</field>
        <field name="code">
# Test alert creation
test_alert = model.create_test_alerts()
if test_alert:
    log(f"Test alert created successfully with ID: {test_alert.id}")
else:
    log("Failed to create test alert")
        </field>
    </record>

    <!-- Action for Running Alert Detection Test -->
    <record id="action_internship_alert_detection_test" model="ir.actions.server">
        <field name="name">Run Alert Detection Test</field>
        <field name="model_id" ref="model_internship_alert"/>
        <field name="state">code</field>
        <field name="code">
# Run alert detection test
result = model.run_alert_detection_test()
if 'error' in result:
    log(f"Alert detection test failed: {result['error']}")
else:
    log(f"Alert detection test completed: {result['message']}")
    log(f"Total alerts: {result['total_alerts']}, Active: {result['active_alerts']}")
        </field>
    </record>

</odoo>
