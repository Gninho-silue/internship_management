<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste (Tree) -->
    <record id="view_internship_presentation_tree" model="ir.ui.view">
        <field name="name">internship.presentation.tree</field>
        <field name="model">internship.presentation</field>
        <field name="arch" type="xml">
            <tree string="Présentations"
                  decoration-info="status=='draft'"
                  decoration-primary="status=='submitted'"
                  decoration-warning="status=='revision_required'"
                  decoration-success="status=='approved'"
                  decoration-danger="is_overdue==True and status not in ['approved']">
                <field name="name"/>
                <field name="stage_id"/>
                <field name="student_id" widget="many2one_avatar_user"/>
                <field name="version"/>
                <field name="submission_date"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="status" widget="badge"/>
                <field name="is_overdue" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire -->
    <record id="view_internship_presentation_form" model="ir.ui.view">
        <field name="name">internship.presentation.form</field>
        <field name="model">internship.presentation</field>
        <field name="arch" type="xml">
            <form string="Présentation">
                <header>
                    <button name="action_submit" string="Soumettre pour Révision" type="object"
                            class="btn-primary" invisible="status not in ['draft', 'revision_required']"/>
                    <button name="action_approve" string="Approuver" type="object"
                            class="btn-success" invisible="status != 'submitted'"
                            groups="internship_management.group_internship_supervisor,internship_management.group_internship_coordinator"/>
                    <button name="action_request_revision" string="Demander une Révision" type="object"
                            class="btn-warning" invisible="status != 'submitted'"
                            groups="internship_management.group_internship_supervisor,internship_management.group_internship_coordinator"
                            help="Postez d'abord vos commentaires dans le fil de discussion avant de cliquer sur ce bouton."/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Titre de la Présentation"/>
                        <h1>
                            <field name="name" placeholder="Ex: Soutenance du Projet X"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations Générales">
                            <field name="stage_id" options="{'no_create': True}"/>
                            <field name="student_id"/>
                            <field name="supervisor_id"/>
                            <field name="version"/>
                        </group>
                        <group string="Fichier de Présentation">
                            <field name="presentation_file" widget="binary" filename="filename"/>
                            <field name="filename" readonly="1"/>
                            <field name="file_size" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Dates Clés">
                            <field name="submission_date" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                            <field name="due_date"/>
                            <field name="is_overdue" readonly="1"/>
                        </group>
                    </group>
                    <!-- OPTIMISATION: Le bloc de notes de révision est supprimé.
                         Toute la communication se fait dans le Chatter ci-dessous. -->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_internship_presentation_kanban" model="ir.ui.view">
        <field name="name">internship.presentation.kanban</field>
        <field name="model">internship.presentation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="status">
                <field name="name"/>
                <field name="student_id"/>
                <field name="status"/>
                <field name="version"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge rounded-pill text-bg-info">
                                    <field name="version"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="student_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <img t-att-src="kanban_image('internship.student', 'avatar_128', record.student_id.raw_value)"
                                         t-att-title="record.student_id.value" t-att-alt="record.student_id.value"
                                         class="oe_kanban_avatar o_image_24_cover"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ... (Les vues recherche et les actions peuvent rester les mêmes, elles sont bien conçues) ... -->
    <!-- Vue Recherche -->
    <record id="view_internship_presentation_search" model="ir.ui.view">
        <field name="name">internship.presentation.search</field>
        <field name="model">internship.presentation</field>
        <field name="arch" type="xml">
            <search string="Rechercher Présentations">
                <field name="name"/>
                <field name="student_id"/>
                <field name="supervisor_id"/>
                <field name="stage_id"/>
                <filter string="Brouillon" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Soumis" name="submitted" domain="[('status', '=', 'submitted')]"/>
                <filter string="Approuvé" name="approved" domain="[('status', '=', 'approved')]"/>
                <filter string="Révision Requise" name="revision_required"
                        domain="[('status', '=', 'revision_required')]"/>
                <filter string="En Retard" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <separator/>
                <filter string="Mes Présentations" name="my_presentations" domain="[('student_id.user_id', '=', uid)]"/>
                <filter string="À Réviser" name="to_review"
                        domain="[('supervisor_id.user_id', '=', uid), ('status', '=', 'submitted')]"/>
                <group expand="0" string="Grouper Par">
                    <filter string="Statut" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Étudiant" name="group_student" context="{'group_by': 'student_id'}"/>
                    <filter string="Encadrant" name="group_supervisor" context="{'group_by': 'supervisor_id'}"/>
                    <filter string="Date de Soumission" name="group_submission_date"
                            context="{'group_by': 'submission_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_internship_presentation" model="ir.actions.act_window">
        <field name="name">Présentations de Soutenance</field>
        <field name="res_model">internship.presentation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_internship_presentation_search"/>
        <field name="context">{'search_default_submitted': 1}</field>
    </record>
</odoo>