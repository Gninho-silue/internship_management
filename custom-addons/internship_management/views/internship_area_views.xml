<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue liste (tree) pour les domaines d'expertise -->
        <record id="view_internship_area_tree" model="ir.ui.view">
            <field name="name">internship.area.tree</field>
            <field name="model">internship.area</field>
            <field name="arch" type="xml">
                <tree string="Domaines d'Expertise">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="internship_count"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire pour les domaines d'expertise -->
        <record id="view_internship_area_form" model="ir.ui.view">
            <field name="name">internship.area.form</field>
            <field name="model">internship.area</field>
            <field name="arch" type="xml">
                <form string="Domaine d'Expertise">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom du domaine"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="parent_id"/>
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <field name="active"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="description" string="Description">
                                <field name="description" nolabel="1"
                                       placeholder="Description détaillée du domaine..."/>
                            </page>
                            <page name="subdomains" string="Sous-domaines">
                                <field name="child_ids">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Compétences et Encadrants">
                                <group>
                                    <field name="skill_ids" widget="many2many_tags" />
                                    <field name="supervisor_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Kanban pour les domaines d'expertise -->
        <record id="view_internship_area_kanban" model="ir.ui.view">
            <field name="name">internship.area.kanban</field>
            <field name="model">internship.area</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="parent_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div t-if="record.parent_id.raw_value">
                                        <small class="text-muted">
                                            Sous-domaine de :
                                            <field name="parent_id"/>
                                        </small>
                                    </div>
                                    <div class="text-muted mt-2" style="white-space: pre-wrap;">
                                        <field name="description"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action du menu pour les domaines d'expertise -->
        <record id="action_internship_area_list" model="ir.actions.act_window">
            <field name="name">Domaines d'Expertise</field>
            <field name="res_model">internship.area</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier domaine d'expertise
                </p>
                <p>
                    Gérez tous les domaines d'expertise disponibles pour votre organisation.
                </p>
            </field>
        </record>
    </data>
</odoo>