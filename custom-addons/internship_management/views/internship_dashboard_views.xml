        <!-- Admin Dashboard Form View -->
        <record id="view_internship_dashboard_admin_form" model="ir.ui.view">
            <field name="name">internship.dashboard.admin.form</field>
            <field name="model">internship.dashboard</field>
            <field name="arch" type="xml">
                <form string="Administrator Dashboard" create="false" edit="false">
                    <style type="text/css">
                        .dashboard-card {
                            padding: 20px;
                            border-radius: 15px;
                            text-align: center;
                            margin: 10px;
                            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
                            transition: all 0.3s ease;
                            color: white;
                        }
                        .dashboard-card:hover {
                            transform: translateY(-5px);
                            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
                        }
                        .dashboard-card h2 {
                            margin: 0;
                            font-size: 2.8em;
                            font-weight: 700;
                        }
                        .dashboard-card p {
                            margin: 8px 0 0 0;
                            font-size: 1.1em;
                            font-weight: 600;
                            opacity: 0.95;
                        }
                        .card-primary { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
                        .card-secondary { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
                        .card-success { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
                        .card-warning { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
                        .card-info { background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); }
                        .card-light { background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); color: #333; }
                        .card-orange { background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%); color: #333; }
                        .card-pink { background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%); color: #333; }
                        .card-purple { background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); }
                        .card-danger { background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%); }
                        .card-blue { background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%); }
                        .card-teal { background: linear-gradient(135deg, #00b894 0%, #00cec9 100%); }
                        .dashboard-header {
                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                            color: white;
                            padding: 20px;
                            border-radius: 15px;
                            margin-bottom: 20px;
                            text-align: center;
                        }
                        .section-title {
                            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
                            padding: 15px;
                            border-radius: 10px;
                            margin: 20px 0 10px 0;
                            border-left: 4px solid #667eea;
                        }
                        .section-title h3 {
                            margin: 0;
                            color: #495057;
                            font-weight: 600;
                        }
                    </style>
                    
                    <header>
                        <button name="action_refresh_dashboard" 
                                string="Refresh Dashboard" 
                                type="object" 
                                class="btn-primary"
                                icon="fa-refresh"/>
                        <field name="dashboard_type" invisible="1"/>
                    </header>
                    
                    <sheet>
                        <div class="dashboard-header">
                            <h1 style="margin: 0; font-size: 2.2em; font-weight: 700;">
                                Administrator Dashboard
                            </h1>
                            <p style="margin: 10px 0 0 0; font-size: 1.1em; opacity: 0.9;">
                                Complete overview of internship management system
                            </p>
                        </div>
                        
                        <!-- Date Range -->
                        <group>
                            <group>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                        </group>
                        
                        <!-- Core Statistics -->
                        <div class="section-title">
                            <h3>Core Internship Statistics</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="dashboard-card card-primary">
                                    <h2><field name="total_internships"/></h2>
                                    <p>Total Internships</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-secondary">
                                    <h2><field name="active_internships"/></h2>
                                    <p>Active Internships</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-success">
                                    <h2><field name="completed_internships"/></h2>
                                    <p>Completed Internships</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-warning">
                                    <h2><field name="pending_internships"/></h2>
                                    <p>Pending Internships</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- People &amp; Resources -->
                        <div class="section-title">
                            <h3>People &amp; Resources</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="dashboard-card card-info">
                                    <h2><field name="total_students"/></h2>
                                    <p>Total Students</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-light">
                                    <h2><field name="total_supervisors"/></h2>
                                    <p>Total Supervisors</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-orange">
                                    <h2><field name="total_documents"/></h2>
                                    <p>Total Documents</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-pink">
                                    <h2><field name="pending_reviews"/></h2>
                                    <p>Pending Reviews</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Tasks &amp; Activities -->
                        <div class="section-title">
                            <h3>Tasks &amp; Activities</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="dashboard-card card-purple">
                                    <h2><field name="total_tasks"/></h2>
                                    <p>Total Tasks</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-danger">
                                    <h2><field name="overdue_tasks"/></h2>
                                    <p>Overdue Tasks</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-blue">
                                    <h2><field name="total_meetings"/></h2>
                                    <p>Total Meetings</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="dashboard-card card-teal">
                                    <h2><field name="upcoming_meetings"/></h2>
                                    <p>Upcoming Meetings</p>
                                </div>
                            </div>
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>

