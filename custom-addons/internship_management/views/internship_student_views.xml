<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_internship_student_form" model="ir.ui.view">
        <field name="name">internship.student.form</field>
        <field name="model">internship.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom complet"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="birth_date"/>
                            <field name="linkedin_profile" widget="url"/>
                        </group>
                        <group>
                            <field name="school"/>
                            <field name="study_level"/>
                            <field name="speciality"/>
                            <field name="student_id"/>
                            <field name="expected_graduation"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Stages">
                            <field name="stage_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="company_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documents">
                            <field name="document_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="date_upload"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_internship_student_tree" model="ir.ui.view">
        <field name="name">internship.student.tree</field>
        <field name="model">internship.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="school"/>
                <field name="study_level"/>
                <field name="speciality"/>
                <field name="stage_count"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_internship_student_search" model="ir.ui.view">
        <field name="name">internship.student.search</field>
        <field name="model">internship.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="school"/>
                <field name="study_level"/>
                <field name="speciality"/>
                <separator/>
                <filter string="Actif" name="active" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_internship_student" model="ir.actions.act_window">
        <field name="name">Stagiaires</field>
        <field name="res_model">internship.student</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                CrÃ©er votre premier stagiaire
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_internship_root"
              name="Stages"
              sequence="10"/>

    <menuitem id="menu_internship_student"
              name="Stagiaires"
              parent="menu_internship_root"
              action="action_internship_student"
              sequence="10"/>
</odoo>