<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue liste étudiants -->
        <record id="view_internship_student_tree" model="ir.ui.view">
            <field name="name">internship.student.tree</field>
            <field name="model">internship.student</field>
            <field name="arch" type="xml">
                <tree string="Students">
                    <field name="full_name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="institution"/>
                    <field name="education_level"/>
                    <field name="field_of_study"/>
                    <field name="internship_count" string="Internships"/>
                    <field name="average_grade" string="Avg Grade"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire étudiant -->
        <record id="view_internship_student_form" model="ir.ui.view">
            <field name="name">internship.student.form</field>
            <field name="model">internship.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <sheet>
                        <field name="profile_image" widget="image" class="oe_avatar"
                               options="{'size': [90, 90]}"/>

                        <div class="oe_title">
                            <h1><field name="full_name" placeholder="Full Name"/></h1>
                        </div>

                        <group>
                            <group name="contact" string="Contact Information">
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="birth_date"/>
                                <field name="linkedin_profile" widget="url"/>
                                <field name="user_id"/>
                            </group>

                            <group name="academic" string="Academic Information">
                                <field name="institution"/>
                                <field name="education_level"/>
                                <field name="field_of_study"/>
                                <field name="student_id_number"/>
                                <field name="expected_graduation_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="internships" string="Internships">
                                <field name="internship_ids">
                                    <tree>
                                        <field name="reference_number"/>
                                        <field name="title"/>
                                        <field name="company_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="state" widget="badge"/>
                                        <field name="final_grade"/>
                                    </tree>
                                </field>

                                <group class="oe_subtotal_footer oe_right">
                                    <field name="internship_count" string="Total Internships"/>
                                    <field name="average_grade" string="Average Grade"/>
                                    <field name="completion_rate" string="Completion Rate"
                                           widget="progressbar"/>
                                </group>
                            </page>

                            <page name="skills" string="Skills and Interests">
                                <field name="skill_ids" widget="many2many_tags"/>
                                <field name="interest_area_ids" widget="many2many_tags"/>
                            </page>

                            <page name="documents" string="Documents">
                                <group>
                                    <field name="cv_document" filename="cv_document_filename"/>
                                </group>
                                <field name="document_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="date_upload"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue kanban étudiants -->
        <record id="view_internship_student_kanban" model="ir.ui.view">
            <field name="name">internship.student.kanban</field>
            <field name="model">internship.student</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="full_name"/>
                    <field name="email"/>
                    <field name="institution"/>
                    <field name="education_level"/>
                    <field name="internship_count"/>
                    <field name="profile_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('internship.student', 'profile_image', record.id.raw_value)"
                                         alt="Student" class="o_kanban_image_inner_pic"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="full_name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section">
                                        <div><field name="institution"/></div>
                                        <div><field name="education_level"/></div>
                                        <div><i class="fa fa-envelope" title="Email"/> <field name="email"/></div>
                                        <div><i class="fa fa-graduation-cap" title="Internships"/> <field name="internship_count"/> internships</div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action liste étudiants -->
        <record id="action_internship_student_list" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">internship.student</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add your first student!
                </p>
                <p>
                    Manage student profiles, their skills and internship journey.
                </p>
            </field>
        </record>

    </data>
</odoo>