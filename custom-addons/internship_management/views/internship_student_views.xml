<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue liste (tree) pour les étudiants (pas de changement ici) -->
        <record id="view_internship_student_tree" model="ir.ui.view">
            <field name="name">internship.student.tree</field>
            <field name="model">internship.student</field>
            <field name="arch" type="xml">
                <tree string="Étudiants">
                    <field name="full_name"/>
                    <field name="email_from_user"/>
                    <field name="phone"/>
                    <field name="institution"/>
                    <field name="education_level"/>
                    <field name="field_of_study"/>
                    <field name="internship_count" string="Nb Stages"/>
                    <field name="average_grade" string="Note Moy."/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire pour un étudiant (CORRIGÉE) -->
        <record id="view_internship_student_form" model="ir.ui.view">
            <field name="name">internship.student.form</field>
            <field name="model">internship.student</field>
            <field name="arch" type="xml">
                <form string="Étudiant">
                    <sheet>
                        <field name="profile_image" widget="image" class="oe_avatar"/>

                        <div class="oe_title">
                            <h1>
                                <field name="full_name" placeholder="Nom complet..."/>
                            </h1>
                        </div>

                        <group>
                            <group name="contact" string="Informations de Contact">
                                <!--
                                    CORRECTION ODOO 17: Remplacement de 'attrs' par 'invisible'.
                                    Le champ 'email' pour la création est visible uniquement si aucun utilisateur n'est encore lié.
                                    Les autres champs liés à l'utilisateur sont visibles dès qu'un utilisateur est lié.
                                -->
                                <field name="email" placeholder="email@exemple.com" invisible="user_id != False"/>
                                <field name="user_id" readonly="1"
                                       context="{'form_view_ref':'base.view_users_simple_form'}"
                                       invisible="user_id == False"/>
                                <field name="email_from_user" widget="email" invisible="user_id == False"/>
                                <field name="phone"/>
                                <field name="birth_date"/>
                                <field name="linkedin_profile" widget="url"/>
                            </group>

                            <group name="academic" string="Informations Académiques">
                                <field name="institution"/>
                                <field name="education_level"/>
                                <field name="field_of_study"/>
                                <field name="student_id_number"/>
                                <field name="expected_graduation_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="internships" string="Stages">
                                <field name="internship_ids" readonly="1">
                                    <tree>
                                        <field name="reference_number"/>
                                        <field name="title"/>
                                        <field name="company_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="state" widget="badge"/>
                                        <field name="final_grade"/>
                                    </tree>
                                </field>

                                <group class="oe_subtotal_footer oe_right">
                                    <field name="internship_count" string="Nombre total de stages"/>
                                    <field name="average_grade" string="Note moyenne"/>
                                    <field name="completion_rate" string="Taux de complétion" widget="progressbar"/>
                                </group>
                            </page>

                            <page name="skills" string="Compétences et Intérêts">
                                <field name="skill_ids" widget="many2many_tags"/>
                                <field name="interest_area_ids" widget="many2many_tags"/>
                            </page>

                            <page name="documents" string="Documents">
                                <group>
                                    <field name="cv_document" filename="cv_document_filename"/>
                                </group>
                                <field name="document_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="document_type"/>
                                        <field name="date_upload"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Les vues Kanban et Action restent inchangées -->
        <record id="view_internship_student_kanban" model="ir.ui.view">
            <field name="name">internship.student.kanban</field>
            <field name="model">internship.student</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="full_name"/>
                    <field name="email_from_user"/>
                    <field name="institution"/>
                    <field name="education_level"/>
                    <field name="internship_count"/>
                    <field name="profile_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('internship.student', 'profile_image', record.id.raw_value)"
                                         alt="Étudiant" class="o_kanban_image_inner_pic"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="full_name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section">
                                        <div>
                                            <field name="institution"/>
                                        </div>
                                        <div>
                                            <field name="education_level"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-envelope" title="Email"/>
                                            <field name="email_from_user"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-graduation-cap" title="Stages"/>
                                            <field name="internship_count"/>
                                            stage(s)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_internship_student_list" model="ir.actions.act_window">
            <field name="name">Étudiants</field>
            <field name="res_model">internship.student</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ajoutez votre premier étudiant !
                </p>
                <p>
                    Gérez les profils des étudiants, leurs compétences et leur parcours de stage.
                </p>
            </field>
        </record>

    </data>
</odoo>