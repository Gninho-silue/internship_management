<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue liste des commentaires -->
        <record id="view_internship_comment_tree" model="ir.ui.view">
            <field name="name">internship.comment.tree</field>
            <field name="model">internship.comment</field>
            <field name="arch" type="xml">
                <tree string="Commentaires">
                    <field name="content" max_width="200"/>
                    <field name="author_id"/>
                    <field name="document_id"/>
                    <field name="comment_type"/>
                    <field name="state" widget="badge"
                           decoration-info="state=='draft'"
                           decoration-warning="state=='sent'"
                           decoration-success="state=='resolved'"
                           decoration-muted="state=='archived'"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire des commentaires -->
        <record id="view_internship_comment_form" model="ir.ui.view">
            <field name="name">internship.comment.form</field>
            <field name="model">internship.comment</field>
            <field name="arch" type="xml">
                <form string="Commentaire">
                    <header>
                        <button name="action_send" string="Envoyer" type="object"
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_resolve" string="Résolu" type="object"
                                invisible="state != 'sent'"/>
                        <button name="action_archive" string="Archiver" type="object"
                                invisible="state == 'archived'"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,sent,resolved,archived"/>
                    </header>

                    <sheet>
                        <group>
                            <group name="comment_info" string="Informations">
                                <field name="author_id" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="comment_type"/>
                            </group>
                            <group name="document_info" string="Document">
                                <field name="document_id"/>
                                <field name="stage_id"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="content" string="Commentaire">
                                <field name="content" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action principale -->
        <record id="action_internship_comment_list" model="ir.actions.act_window">
            <field name="name">Commentaires</field>
            <field name="res_model">internship.comment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier commentaire !
                </p>
                <p>
                    Donnez du feedback sur les documents de stage.
                </p>
            </field>
        </record>

    </data>
</odoo>