<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- VUES LISTE (TREE) -->
        <!-- ================================= -->

        <!-- Vue liste des messages -->
        <record id="view_internship_message_tree" model="ir.ui.view">
            <field name="name">internship.message.tree</field>
            <field name="model">internship.message</field>
            <field name="arch" type="xml">
                <tree string="Messages">
                    <field name="subject"/>
                    <field name="sender_id"/>
                    <field name="recipient_ids" widget="many2many_tags"/>
                    <field name="message_type"/>
                    <field name="priority" widget="priority"/>
                    <field name="state" widget="badge"
                           decoration-info="state=='draft'"
                           decoration-warning="state=='sent'"
                           decoration-success="state=='read'"
                           decoration-muted="state=='archived'"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUES FORMULAIRE (FORM) -->
        <!-- ================================= -->

        <!-- Vue formulaire des messages -->
        <record id="view_internship_message_form" model="ir.ui.view">
            <field name="name">internship.message.form</field>
            <field name="model">internship.message</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <header>
                        <button name="action_send" string="Envoyer" type="object"
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_mark_as_read" string="Marquer comme lu" type="object"
                                invisible="state != 'sent'"/>
                        <button name="action_archive" string="Archiver" type="object"
                                invisible="state == 'archived'"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,sent,read,archived"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1><field name="subject" placeholder="Sujet du message..."/></h1>
                        </div>

                        <group>
                            <group name="sender_info" string="Expéditeur">
                                <field name="sender_id" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                            <group name="recipient_info" string="Destinataires">
                                <field name="recipient_ids" options="{'no_create': True}"/>
                                <field name="message_type"/>
                                <field name="priority" widget="priority"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="content" string="Contenu">
                                <field name="body" nolabel="1"/>
                            </page>

                            <page name="relations" string="Relations">
                                <group>
                                    <field name="stage_id"/>
                                    <field name="document_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ================================= -->
        <!-- ACTIONS -->
        <!-- ================================= -->

        <!-- Vue kanban des messages -->
        <record id="view_internship_message_kanban" model="ir.ui.view">
            <field name="name">internship.message.kanban</field>
            <field name="model">internship.message</field>
            <field name="arch" type="xml">
                <kanban default_group_by="message_type" class="o_kanban_small_column">
                    <field name="subject"/>
                    <field name="sender_id"/>
                    <field name="recipient_ids"/>
                    <field name="message_type"/>
                    <field name="priority"/>
                    <field name="state"/>
                    <field name="create_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong><field name="subject"/></strong>
                                        <div><i class="fa fa-user" title="Expéditeur"/> <field name="sender_id"/></div>
                                        <div><i class="fa fa-users" title="Destinataires"/> <field name="recipient_ids" widget="many2many_tags"/></div>
                                        <div><i class="fa fa-clock-o" title="Date"/> <field name="create_date"/></div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <field name="priority" widget="priority"/>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="state" widget="label_selection"
                                                       options="{'classes': {'draft': 'default', 'sent': 'warning', 'read': 'success', 'archived': 'muted'}}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action principale : Liste de tous les messages -->
        <record id="action_internship_message_list" model="ir.actions.act_window">
            <field name="name">Messages</field>
            <field name="res_model">internship.message</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier message !
                </p>
                <p>
                    Communiquez avec les autres acteurs de vos stages.
                </p>
            </field>
        </record>

    </data>
</odoo>