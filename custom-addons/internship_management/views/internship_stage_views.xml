<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- VUE LISTE (TREE) -->
        <!-- ================================= -->

        <record id="view_internship_stage_tree" model="ir.ui.view">
            <field name="name">internship.stage.tree</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <!-- Les décorations colorent les lignes en fonction du statut pour une meilleure lisibilité -->
                <tree string="Stages"
                      decoration-info="state=='draft'"
                      decoration-warning="state=='submitted'"
                      decoration-bf="state=='approved'"
                      decoration-primary="state=='in_progress'"
                      decoration-success="state=='completed'"
                      decoration-muted="state=='evaluated'"
                      decoration-danger="state=='cancelled'">

                    <field name="reference_number"/>
                    <field name="title"/>
                    <field name="internship_type"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="duration_days"/>
                    <field name="completion_percentage" widget="progressbar"/>
                    <field name="proposal_status" widget="badge"
                           decoration-info="proposal_status=='draft'"
                           decoration-warning="proposal_status=='proposed'"
                           decoration-success="proposal_status=='accepted'"
                           decoration-danger="proposal_status=='modifications_requested'"
                           decoration-muted="proposal_status=='rejected'"/>
                    <field name="state" widget="badge"
                           decoration-info="state=='draft'"
                           decoration-warning="state=='submitted'"
                           decoration-bf="state=='approved'"
                           decoration-primary="state=='in_progress'"
                           decoration-success="state=='completed'"
                           decoration-muted="state=='evaluated'"
                           decoration-danger="state=='cancelled'"/>
                </tree>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUE FORMULAIRE (FORM) -->
        <!-- ================================= -->

        <record id="view_internship_stage_form" model="ir.ui.view">
            <field name="name">internship.stage.form</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <form string="Stage">
                    <header>
                        <!-- Boutons d'action principaux du workflow (interdits aux étudiants) -->
                        <button name="action_submit" string="Soumettre" type="object"
                                class="btn-primary" invisible="state != 'draft'"
                                groups="internship_management.group_internship_supervisor,internship_management.group_internship_coordinator,internship_management.group_internship_admin"/>
                        <button name="action_complete" string="Terminer" type="object"
                                class="oe_highlight" invisible="state != 'in_progress'"
                                groups="internship_management.group_internship_supervisor,internship_management.group_internship_coordinator,internship_management.group_internship_admin"/>
                        <button name="action_schedule_defense" string="Planifier Soutenance" type="object"
                                class="oe_highlight" invisible="state != 'completed'"
                                groups="internship_management.group_internship_supervisor,internship_management.group_internship_coordinator,internship_management.group_internship_admin"/>
                        <button name="action_evaluate" string="Évaluer" type="object"
                                class="oe_highlight" invisible="state != 'completed'"
                                groups="internship_management.group_internship_supervisor,internship_management.group_internship_coordinator,internship_management.group_internship_admin"/>
                        <button name="action_cancel" string="Annuler" type="object"
                                invisible="state in ['cancelled', 'evaluated']"
                                groups="internship_management.group_internship_supervisor,internship_management.group_internship_coordinator,internship_management.group_internship_admin"/>
                        <button name="action_reset_to_draft" string="Réinitialiser en Brouillon" type="object"
                                invisible="state in ['draft', 'evaluated']"
                                groups="internship_management.group_internship_admin,internship_management.group_internship_coordinator"/>

                        <!-- La barre de statut (statusbar) gère le cycle de vie du stage -->
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submitted,approved,in_progress,completed,evaluated"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <label for="title" string="Titre du Stage"/>
                            <h1>
                                <field name="title" placeholder="Titre du stage..."/>
                            </h1>
                            <h3>
                                <field name="reference_number" readonly="1"/>
                            </h3>
                        </div>

                        <group>
                            <group name="basic_info" string="Informations de Base">
                                <field name="internship_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="student_id" options="{'no_create': True}"/>
                                <field name="supervisor_id" options="{'no_create': True}"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group name="dates" string="Calendrier">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration_days" readonly="1"/>
                                <field name="completion_percentage" widget="progressbar"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="description" string="Description du Projet">
                                <field name="project_description" nolabel="1"
                                       placeholder="Décrire le contexte, les missions et le périmètre du stage..."/>
                            </page>

                            <page name="objectives" string="Objectifs Pédagogiques">
                                <field name="learning_objectives" nolabel="1"
                                       placeholder="Lister les objectifs pédagogiques et professionnels..."/>
                            </page>

                            <page name="subject_proposal" string="Proposition de Sujet">
                                <header>
                                    <button name="action_propose_subject" string="Proposer le Sujet" type="object"
                                            class="btn-primary"
                                            invisible="proposal_status != 'draft' or not subject_proposal"
                                            groups="internship_management.group_internship_supervisor,internship_management.group_internship_coordinator,internship_management.group_internship_admin"/>
                                    <button name="action_accept_proposal" string="Accepter la Proposition" type="object"
                                            class="btn-success" invisible="proposal_status != 'proposed'"
                                            groups="internship_management.group_internship_student"/>
                                    <button name="action_request_modifications" string="Demander des Modifications"
                                            type="object"
                                            class="btn-warning" invisible="proposal_status != 'proposed'"
                                            groups="internship_management.group_internship_student"/>
                                    <button name="action_reject_proposal" string="Rejeter la Proposition" type="object"
                                            class="btn-danger"
                                            invisible="proposal_status not in ['proposed', 'modifications_requested']"
                                            groups="internship_management.group_internship_student"/>
                                    <field name="proposal_status" widget="statusbar"
                                           statusbar_visible="draft,proposed,accepted,modifications_requested,rejected"/>
                                </header>
                                <group>
                                    <group string="Informations sur la Proposition">
                                        <field name="proposal_date"/>
                                        <field name="proposal_accepted_date"/>
                                    </group>
                                </group>
                                <separator string="Proposition de Sujet"/>
                                <field name="subject_proposal" nolabel="1"
                                       placeholder="Entrez la proposition de sujet ici..."/>
                                <separator string="Feedback"
                                           invisible="proposal_status not in ['modifications_requested', 'rejected']"/>
                                <field name="proposal_feedback" nolabel="1"
                                       placeholder="Entrez le feedback sur la proposition..."
                                       invisible="proposal_status not in ['modifications_requested', 'rejected']"/>
                            </page>

                            <page name="tasks" string="Tâches et Livrables">
                                <div class="oe_button_box" name="button_box">
                                    <button name="action_create_task" string="Créer Tâche" type="object"
                                            class="oe_stat_button" icon="fa-plus"/>
                                </div>
                                <group>
                                    <group string="Statistiques des Tâches">
                                        <field name="task_count"/>
                                        <field name="completed_task_count"/>
                                        <field name="pending_task_count"/>
                                    </group>
                                    <group string="Actions Rapides">
                                        <button name="action_open_tasks" string="Voir Toutes les Tâches" type="object"
                                                class="btn-primary" icon="fa-list"/>
                                    </group>
                                </group>
                                <separator string="Tâches Récentes"/>
                                <field name="task_ids">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="deadline"/>
                                        <field name="assigned_to"/>
                                        <field name="state" widget="badge"/>
                                        <field name="priority" widget="priority"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="meetings" string="Réunions">
                                <div class="oe_button_box" name="button_box">
                                    <button name="action_schedule_meeting" type="object" class="oe_stat_button"
                                            icon="fa-calendar-plus-o" string="Planifier une Réunion"/>
                                    <button name="%(action_internship_meeting_list)d" type="action"
                                            class="oe_stat_button"
                                            icon="fa-calendar" string="Toutes les Réunions"/>
                                </div>
                                <group>
                                    <group string="Statistiques des Réunions">
                                        <field name="meeting_count" widget="statinfo" string="Réunions Totales"/>
                                        <field name="upcoming_meeting_count" widget="statinfo" string="À Venir"/>
                                    </group>
                                </group>
                                <separator string="Réunions Récentes"/>
                                <field name="meeting_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="meeting_type" widget="badge"/>
                                        <field name="date"/>
                                        <field name="duration"/>
                                        <field name="organizer_id"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="presentations" string="Présentations">
                                <div class="oe_button_box" name="button_box">
                                    <button name="action_create_presentation" type="object" class="oe_stat_button"
                                            icon="fa-upload" string="Téléverser Présentation"/>
                                    <button name="%(action_internship_presentation)d" type="action"
                                            class="oe_stat_button"
                                            icon="fa-file-powerpoint-o" string="Toutes les Présentations"/>
                                </div>
                                <group>
                                    <group string="Statistiques des Présentations">
                                        <field name="presentation_count" widget="statinfo"
                                               string="Présentations Totales"/>
                                        <field name="pending_presentation_count" widget="statinfo"
                                               string="En Attente de Révision"/>
                                    </group>
                                    <group string="Présentation Finale">
                                        <field name="final_presentation_id"/>
                                    </group>
                                </group>
                                <separator string="Présentations Récentes"/>
                                <field name="presentation_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="version"/>
                                        <field name="status" widget="badge"/>
                                        <field name="submission_date"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="documents" string="Documents">
                                <field name="document_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="document_type"/>
                                        <field name="date_upload"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="defense_evaluation" string="Soutenance &amp; Évaluation"
                                  invisible="state not in ['completed', 'evaluated']">
                                <group>
                                    <group string="Détails de la Soutenance">
                                        <field name="defense_date"/>
                                        <field name="defense_location"/>
                                        <field name="defense_status" widget="badge"/>
                                    </group>
                                    <group string="Membres du Jury">
                                        <field name="jury_member_ids" widget="many2many_tags"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Notes">
                                        <field name="defense_grade"/>
                                        <field name="final_grade"/>
                                    </group>
                                    <group string="Signatures Numériques">
                                        <field name="student_signature" widget="signature"/>
                                        <field name="supervisor_signature" widget="signature"/>
                                        <field name="jury_signature" widget="signature"/>
                                    </group>
                                </group>
                                <separator string="Feedback d'Évaluation"/>
                                <field name="evaluation_feedback" nolabel="1"
                                       placeholder="Entrez le feedback détaillé de l'évaluation ici..."/>
                            </page>

                            <!-- Onglet Rapports Réintégré -->
                            <page name="rapports" string="Rapports">
                                <div class="oe_button_box" name="button_box">
                                    <button name="%(action_convention_report)d" string="Convention de Stage"
                                            type="action" class="oe_stat_button" icon="fa-file-text-o"
                                            help="Générer la convention de stage"/>
                                    <button name="%(action_attestation_report)d" string="Attestation de Stage"
                                            type="action" class="oe_stat_button" icon="fa-certificate"
                                            help="Générer l'attestation de stage"
                                            invisible="state not in ['completed', 'evaluated']"/>
                                    <button name="%(action_defense_report)d" string="PV de Soutenance"
                                            type="action" class="oe_stat_button" icon="fa-gavel"
                                            help="Générer le procès-verbal de soutenance"
                                            invisible="state != 'evaluated'"/>
                                    <button name="%(action_evaluation_report)d" string="Rapport d'Évaluation"
                                            type="action" class="oe_stat_button" icon="fa-star"
                                            help="Générer le rapport d'évaluation"
                                            invisible="state != 'evaluated'"/>
                                </div>
                            </page>

                        </notebook>
                    </sheet>

                    <!-- Le Chatter est l'outil central pour le suivi, les messages et les activités -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- ================================= -->
        <!-- VUE KANBAN -->
        <!-- ================================= -->

        <record id="view_internship_stage_kanban" model="ir.ui.view">
            <field name="name">internship.stage.kanban</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="title"/>
                    <field name="student_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="completion_percentage"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <strong>
                                        <field name="title"/>
                                    </strong>
                                    <div>
                                        <i class="fa fa-user" title="Étudiant"/>
                                        <field name="student_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar" title="Période"/>
                                        <field name="start_date"/>
                                        -
                                        <field name="end_date"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="completion_percentage" widget="progressbar"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="state" widget="label_selection"
                                                   options="{'classes': {'draft': 'default', 'submitted': 'info', 'approved': 'warning', 'in_progress': 'primary', 'completed': 'success', 'evaluated': 'success', 'cancelled': 'muted'}}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- ACTIONS DE FENÊTRE -->
        <!-- ================================= -->

        <record id="action_internship_stage_list" model="ir.actions.act_window">
            <field name="name">Stages</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier stage !
                </p>
                <p>
                    Gérez tous les stages de votre organisation : création, suivi, évaluation.
                </p>
            </field>
        </record>

        <record id="action_internship_stage_my" model="ir.actions.act_window">
            <field name="name">Mes Stages</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('student_id.user_id', '=', uid)]</field>
        </record>

        <record id="action_internship_stage_supervise" model="ir.actions.act_window">
            <field name="name">Stages à Encadrer</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('supervisor_id.user_id', '=', uid)]</field>
        </record>
    </data>
</odoo>