<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- VUES LISTE (TREE) -->
        <!-- ================================= -->

        <!-- Vue liste des stages -->
        <record id="view_internship_stage_tree" model="ir.ui.view">
            <field name="name">internship.stage.tree</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <tree string="Stages" decoration-info="state=='draft'"
                      decoration-warning="state=='submitted'"
                      decoration-success="state=='approved'"
                      decoration-primary="state=='in_progress'">
                    <field name="reference"/>
                    <field name="name"/>
                    <field name="stage_type"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="duration" string="Durée (j)"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="state" widget="badge"
                           decoration-info="state=='draft'"
                           decoration-warning="state=='submitted'"
                           decoration-success="state=='approved'"
                           decoration-primary="state=='in_progress'"
                           decoration-muted="state=='cancelled'"/>
                </tree>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUES FORMULAIRE (FORM) -->
        <!-- ================================= -->

        <!-- Vue formulaire des stages -->
        <record id="view_internship_stage_form" model="ir.ui.view">
            <field name="name">internship.stage.form</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <form string="Stage">
                    <header>
                        <!-- Boutons d'action selon l'état -->
                        <button name="action_submit" string="Soumettre" type="object"
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approuver" type="object"
                                class="oe_highlight" invisible="state != 'submitted'"
                                groups="internship_management.group_internship_supervisor"/>
                        <button name="action_start" string="Démarrer" type="object"
                                class="oe_highlight" invisible="state != 'approved'"/>
                        <button name="action_complete" string="Terminer" type="object"
                                class="oe_highlight" invisible="state != 'in_progress'"/>
                        <button name="action_evaluate" string="Évaluer" type="object"
                                class="oe_highlight" invisible="state != 'completed'"
                                groups="internship_management.group_internship_supervisor"/>
                        <button name="action_cancel" string="Annuler" type="object"
                                invisible="state in ['cancelled', 'evaluated']"/>
                        <button name="action_draft" string="Remettre en brouillon" type="object"
                                invisible="state == 'draft'"
                                groups="internship_management.group_internship_admin"/>
                        
                        <!-- Boutons de soutenance -->
                        <button name="action_schedule_defense" string="Planifier Soutenance" type="object"
                                class="oe_highlight" invisible="defense_status != 'scheduled'"
                                groups="internship_management.group_internship_supervisor"/>
                        <button name="action_start_defense" string="Démarrer Soutenance" type="object"
                                class="oe_highlight" invisible="defense_status != 'scheduled'"
                                groups="internship_management.group_internship_supervisor"/>
                        <button name="action_complete_defense" string="Terminer Soutenance" type="object"
                                class="oe_highlight" invisible="defense_status != 'in_progress'"
                                groups="internship_management.group_internship_supervisor"/>
                        <button name="action_cancel_defense" string="Annuler Soutenance" type="object"
                                invisible="defense_status in ['cancelled', 'completed']"
                                groups="internship_management.group_internship_supervisor"/>
                        
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submitted,approved,in_progress,completed,evaluated"/>
                    </header>

                    <sheet>
                        <!-- Titre avec référence -->
                        <div class="oe_title">
                            <label for="name" string="Sujet du Stage"/>
                            <h1><field name="name" placeholder="Titre du stage..."/></h1>
                            <h3><field name="reference" readonly="1"/></h3>
                        </div>

                        <group>
                            <group name="basic_info" string="Informations de Base">
                                <field name="stage_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="student_id" options="{'no_create': True}"/>
                                <field name="supervisor_id" options="{'no_create': True}"/>
                                <field name="company_id" options="{'no_create': True}"/>
                            </group>
                            <group name="dates" string="Dates et Durée">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration" readonly="1"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="description" string="Description">
                                    <field name="description" nolabel="1"
                                       placeholder="Décrivez le contexte, les missions et le périmètre du stage..."
                                       class="oe_form_field_html"/>
                            </page>

                            <page name="objectives" string="Objectifs">
                                    <field name="objectives" nolabel="1"
                                       placeholder="Listez les objectifs pédagogiques et professionnels..."
                                       class="oe_form_field_html"/>
                            </page>

                            <page name="tasks" string="Tâches">
                                <field name="todo_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="deadline"/>
                                        <field name="assigned_to"/>
                                        <field name="state" widget="badge"/>
                                        <field name="priority" widget="priority"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="reports" string="Rapports et Documents">
                                <div class="oe_button_box" name="button_box">
                                    <button name="%(action_convention_report)d" string="Convention de Stage" type="action" 
                                            class="oe_stat_button" icon="fa-file-text-o"
                                            help="Générer la convention de stage"/>
                                    <button name="%(action_attestation_report)d" string="Attestation de Stage" type="action" 
                                            class="oe_stat_button" icon="fa-certificate"
                                            help="Générer l'attestation de stage"
                                            invisible="state not in ['completed', 'evaluated']"/>
                                    <button name="%(action_defense_report)d" string="Procès-Verbal" type="action" 
                                            class="oe_stat_button" icon="fa-gavel"
                                            help="Générer le procès-verbal de soutenance"
                                            invisible="defense_status != 'completed'"/>
                                    <button name="%(action_evaluation_report)d" string="Rapport d'Évaluation" type="action" 
                                            class="oe_stat_button" icon="fa-star"
                                            help="Générer le rapport d'évaluation"
                                            invisible="state != 'evaluated'"/>
                                </div>
                                
                                <group>
                                    <group string="Documents Générés">
                                        <field name="convention_generated" readonly="1" widget="boolean_toggle"/>
                                        <field name="attestation_generated" readonly="1" widget="boolean_toggle"/>
                                        <field name="defense_report_generated" readonly="1" widget="boolean_toggle"/>
                                        <field name="evaluation_report_generated" readonly="1" widget="boolean_toggle"/>
                                    </group>
                                    <group string="Actions Rapides">
                                        <button name="action_generate_convention" string="Marquer Convention Générée" 
                                                type="object" class="oe_highlight" 
                                                invisible="convention_generated"/>
                                        <button name="action_generate_attestation" string="Marquer Attestation Générée" 
                                                type="object" class="oe_highlight" 
                                                invisible="attestation_generated or state not in ['completed', 'evaluated']"/>
                                        <button name="action_generate_defense_report" string="Marquer PV Généré" 
                                                type="object" class="oe_highlight" 
                                                invisible="defense_report_generated or defense_status != 'completed'"/>
                                        <button name="action_generate_evaluation_report" string="Marquer Rapport Généré" 
                                                type="object" class="oe_highlight" 
                                                invisible="evaluation_report_generated or state != 'evaluated'"/>
                                    </group>
                                </group>
                            </page>

                            <page name="evaluation" string="Évaluation"
                                  invisible="state not in ['completed', 'evaluated']">
                                <group>
                                    <group>
                                        <field name="grade"/>
                                        <field name="defense_grade"/>
                                        <field name="defense_date"/>
                                        <field name="defense_room"/>
                                    </group>
                                    <group>
                                        <field name="jury_ids" widget="many2many_tags"/>
                                        <field name="presentation_uploaded"/>
                                        <field name="presentation_document_id"/>
                                        <field name="defense_status" widget="badge"/>
                                        <field name="defense_duration"/>
                                    </group>
                                </group>
                                <group string="Soutenance">
                                    <field name="defense_report" nolabel="1"
                                           placeholder="Procès-verbal de la soutenance..."
                                           class="oe_form_field_html"/>
                                    <field name="defense_notes" nolabel="1"
                                           placeholder="Notes du jury..."
                                           class="oe_form_field_html"/>
                                    <field name="defense_attendance" widget="many2many_tags"/>
                                </group>
                                <group string="Évaluation Détaillée">
                                    <field name="evaluation_notes" nolabel="1" 
                                           placeholder="Notes d'évaluation détaillées..."
                                           class="oe_form_field_html"/>
                                    <field name="feedback" nolabel="1" 
                                           placeholder="Commentaires détaillés sur l'évaluation du stage..."
                                           class="oe_form_field_html"/>
                                </group>
                            </page>

                            <page name="documents" string="Documents">
                                <field name="document_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="date_upload"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter pour le suivi -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUES KANBAN -->
        <!-- ================================= -->

        <!-- Vue kanban des stages -->
        <record id="view_internship_stage_kanban" model="ir.ui.view">
            <field name="name">internship.stage.kanban</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="progress"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <div><i class="fa fa-user" title="Stagiaire"/> <field name="student_id"/></div>
                                            <div><i class="fa fa-building" title="Entreprise"/> <field name="company_id"/></div>
                                            <div><i class="fa fa-calendar" title="Date de début"/> <field name="start_date"/></div>
                                            <div class="mt-2">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar"
                                                         t-att-style="'width: ' + record.progress.raw_value + '%'">
                                                        <t t-esc="record.progress.raw_value"/>%
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUE KANBAN -->
        <!-- ================================= -->

        <!-- Vue kanban des stages -->
        <record id="view_internship_stage_kanban" model="ir.ui.view">
            <field name="name">internship.stage.kanban</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="reference"/>
                    <field name="name"/>
                    <field name="stage_type"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="progress"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong><field name="name"/></strong>
                                        <div><i class="fa fa-hashtag" title="Référence"/> <field name="reference"/></div>
                                        <div><i class="fa fa-user" title="Étudiant"/> <field name="student_id"/></div>
                                        <div><i class="fa fa-briefcase" title="Entreprise"/> <field name="company_id"/></div>
                                        <div><i class="fa fa-calendar" title="Période"/> <field name="start_date"/> - <field name="end_date"/></div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <field name="progress" widget="progressbar"/>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="state" widget="label_selection"
                                                       options="{'classes': {'draft': 'default', 'submitted': 'info', 'approved': 'warning', 'in_progress': 'primary', 'completed': 'success', 'evaluated': 'success', 'cancelled': 'muted'}}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUE DASHBOARD -->
        <!-- ================================= -->

        <!-- Vue dashboard des stages -->
        <record id="view_internship_stage_dashboard" model="ir.ui.view">
            <field name="name">internship.stage.dashboard</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" default_group_by="state" type="primary">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="progress"/>
                    <field name="state"/>
                    <field name="defense_status"/>
                    <field name="grade"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong><field name="name"/></strong>
                                        <div><i class="fa fa-user" title="Étudiant"/> <field name="student_id"/></div>
                                        <div><i class="fa fa-briefcase" title="Encadrant"/> <field name="supervisor_id"/></div>
                                        <div><i class="fa fa-calendar" title="Période"/> <field name="start_date"/> - <field name="end_date"/></div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <field name="progress" widget="progressbar"/>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="state" widget="label_selection"
                                                       options="{'classes': {'draft': 'default', 'submitted': 'info', 'approved': 'warning', 'in_progress': 'primary', 'completed': 'success', 'evaluated': 'success', 'cancelled': 'muted'}}"/>
                                            </div>
                                        </div>
                                        <div t-if="record.defense_status.raw_value" class="mt-2">
                                            <small class="text-muted">
                                                <i class="fa fa-graduation-cap" title="Soutenance"/>
                                                <field name="defense_status" widget="label_selection"/>
                                            </small>
                                        </div>
                                        <div t-if="record.grade.raw_value" class="mt-1">
                                            <span class="badge badge-success">
                                                <i class="fa fa-star" title="Note"/> <field name="grade"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue dashboard web des stages -->
        <record id="view_internship_stage_dashboard_web" model="ir.ui.view">
            <field name="name">internship.stage.dashboard.web</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" type="primary">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_content text-center">
                                    <div class="oe_kanban_details">
                                        <h3><i class="fa fa-dashboard"></i> Tableau de Bord Web</h3>
                                        <p class="text-muted">Statistiques avancées et graphiques interactifs</p>
                                                                                    <div class="mt-3">
                                                <a href="/internship/dashboard" class="btn btn-primary btn-lg">
                                                    <i class="fa fa-external-link"></i> Ouvrir Dashboard Web
                                                </a>
                                            </div>
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                <i class="fa fa-info-circle"></i> Dashboard interactif avec statistiques
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action dashboard : Vue dashboard des stages -->
        <record id="action_internship_stage_dashboard" model="ir.actions.act_window">
            <field name="name">Tableau de Bord</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_internship_stage_dashboard"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier stage !
                </p>
                <p>
                    Le tableau de bord vous permet de visualiser tous vos stages
                    avec des indicateurs de progression et de statut.
                </p>
            </field>
        </record>

        <!-- Action dashboard web : Dashboard avec statistiques -->
        <record id="action_internship_dashboard_web" model="ir.actions.act_window">
            <field name="name">Tableau de Bord Web</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_internship_stage_dashboard_web"/>
            <field name="context">{'dashboard_web': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <a href="/internship/dashboard" class="btn btn-primary" style="font-size: 16px; padding: 10px 20px;">
                        <i class="fa fa-dashboard"></i> Ouvrir Dashboard Web
                    </a>
                </p>
                <p>
                    Cliquez sur le bouton ci-dessus pour ouvrir le dashboard web avec toutes les statistiques.
                </p>
            </field>
        </record>

        <!-- ================================= -->
        <!-- ACTIONS -->
        <!-- ================================= -->

        <!-- Action principale : Liste de tous les stages -->
        <record id="action_internship_stage_list" model="ir.actions.act_window">
            <field name="name">Stages</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier stage !
                </p>
                <p>
                    Gérez tous les stages de votre organisation : création, suivi, évaluation.
                </p>
            </field>
        </record>

        <!-- Action : Mes stages (pour étudiants) -->
        <record id="action_internship_stage_my" model="ir.actions.act_window">
            <field name="name">Mes Stages</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('student_id.user_id', '=', uid)]</field>
            <field name="context">{'default_student_id': [(6, 0, [])]}</field>
        </record>

        <!-- Action : Stages à encadrer (pour superviseurs) -->
        <record id="action_internship_stage_supervise" model="ir.actions.act_window">
            <field name="name">Stages à Encadrer</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('supervisor_id.user_id', '=', uid)]</field>
        </record>

    </data>
</odoo>