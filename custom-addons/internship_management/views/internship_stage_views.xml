<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================= -->
        <!-- VUES LISTE (TREE) -->
        <!-- ================================= -->

        <!-- Vue liste des stages -->
        <record id="view_internship_stage_tree" model="ir.ui.view">
            <field name="name">internship.stage.tree</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <tree string="Internships" decoration-info="state=='draft'"
                      decoration-warning="state=='submitted'"
                      decoration-success="state=='approved'"
                      decoration-primary="state=='in_progress'">
                    <field name="reference_number"/>
                    <field name="title"/>
                    <field name="internship_type"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="duration_days" string="Duration (days)"/>
                    <field name="completion_percentage" widget="progressbar"/>
                    <field name="state" widget="badge"
                           decoration-info="state=='draft'"
                           decoration-warning="state=='submitted'"
                           decoration-success="state=='approved'"
                           decoration-primary="state=='in_progress'"
                           decoration-muted="state=='cancelled'"/>
                </tree>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUES FORMULAIRE (FORM) -->
        <!-- ================================= -->

        <!-- Vue formulaire des stages -->
        <record id="view_internship_stage_form" model="ir.ui.view">
            <field name="name">internship.stage.form</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <form string="Internship">
                    <header>
                        <!-- Boutons d'action selon l'état -->
                        <button name="action_submit" string="Submit" type="object"
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approve" type="object"
                                class="oe_highlight" invisible="state != 'submitted'"
                                groups="internship_management.group_internship_supervisor"/>
                        <button name="action_start" string="Start" type="object"
                                class="oe_highlight" invisible="state != 'approved'"/>
                        <button name="action_complete" string="Complete" type="object"
                                class="oe_highlight" invisible="state != 'in_progress'"/>
                        <button name="action_evaluate" string="Evaluate" type="object"
                                class="oe_highlight" invisible="state != 'completed'"
                                groups="internship_management.group_internship_supervisor"/>
                        <button name="action_cancel" string="Cancel" type="object"
                                invisible="state in ['cancelled', 'evaluated']"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                                invisible="state == 'draft' or state == 'evaluated'"
                                groups="internship_management.group_internship_admin"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submitted,approved,in_progress,completed,evaluated"
                               statusbar_colors="{'draft': 'secondary', 'submitted': 'warning', 'approved': 'info', 'in_progress': 'primary', 'completed': 'success', 'evaluated': 'success'}"/>
                    </header>

                    <sheet>
                        <!-- Titre avec référence -->
                        <div class="oe_title">
                            <label for="title" string="Internship Title"/>
                            <h1><field name="title" placeholder="Internship title..."/></h1>
                            <h3><field name="reference_number" readonly="1"/></h3>
                        </div>

                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="internship_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="student_id" options="{'no_create': True}"/>
                                <field name="supervisor_id" options="{'no_create': True}"/>
                                <field name="company_id" options="{'no_create': True}"/>
                            </group>
                            <group name="dates" string="Timeline">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration_days" readonly="1"/>
                                <field name="completion_percentage" widget="progressbar"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="description" string="Project Description">
                                <field name="project_description" nolabel="1"
                                       placeholder="Describe the internship context, missions and scope..."
                                       class="oe_form_field_html"/>
                            </page>

                            <page name="objectives" string="Learning Objectives">
                                <field name="learning_objectives" nolabel="1"
                                       placeholder="List the educational and professional objectives..."
                                       class="oe_form_field_html"/>
                            </page>

                            <page name="tasks" string="Tasks">
                                <field name="task_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="deadline"/>
                                        <field name="assigned_to"/>
                                        <field name="state" widget="badge"/>
                                        <field name="priority" widget="priority"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="reports" string="Reports and Documents">
                                <div class="oe_button_box" name="button_box">
                                    <button name="%(action_convention_report)d" string="Internship Agreement" type="action"
                                            class="oe_stat_button" icon="fa-file-text-o"
                                            help="Generate internship agreement"/>
                                    <button name="%(action_attestation_report)d" string="Internship Certificate" type="action"
                                            class="oe_stat_button" icon="fa-certificate"
                                            help="Generate internship certificate"
                                            invisible="state not in ['completed', 'evaluated']"/>
                                    <button name="%(action_defense_report)d" string="Defense Report" type="action"
                                            class="oe_stat_button" icon="fa-gavel"
                                            help="Generate defense proceedings"
                                            invisible="defense_status != 'completed'"/>
                                    <button name="%(action_evaluation_report)d" string="Evaluation Report" type="action"
                                            class="oe_stat_button" icon="fa-star"
                                            help="Generate evaluation report"
                                            invisible="state != 'evaluated'"/>
                                </div>
                            </page>

                            <page name="evaluation" string="Evaluation"
                                  invisible="state not in ['completed', 'evaluated']">
                                <group>
                                    <group>
                                        <field name="final_grade"/>
                                        <field name="defense_grade"/>
                                        <field name="defense_date"/>
                                        <field name="defense_status" widget="badge"/>
                                    </group>
                                    <group>
                                        <field name="jury_member_ids" widget="many2many_tags"/>
                                    </group>
                                </group>
                                <separator string="Evaluation Feedback"/>
                                <div class="oe_form_field_html" style="margin: 10px 0;">
                                    <field name="evaluation_feedback" nolabel="1" widget="html"
                                           placeholder="Enter detailed evaluation feedback here..."
                                           style="min-height: 300px; width: 100%; border: 1px solid #ddd; padding: 10px; border-radius: 5px;"/>
                                </div>
                            </page>

                            <page name="documents" string="Documents">
                                <field name="document_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="document_type"/>
                                        <field name="date_upload"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="meetings" string="Meetings">
                                <field name="meeting_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="meeting_type"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter pour le suivi -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUE KANBAN -->
        <!-- ================================= -->

        <!-- Vue kanban des stages -->
        <record id="view_internship_stage_kanban" model="ir.ui.view">
            <field name="name">internship.stage.kanban</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="reference_number"/>
                    <field name="title"/>
                    <field name="internship_type"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="completion_percentage"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong><field name="title"/></strong>
                                        <div><i class="fa fa-hashtag" title="Reference"/> <field name="reference_number"/></div>
                                        <div><i class="fa fa-user" title="Student"/> <field name="student_id"/></div>
                                        <div><i class="fa fa-briefcase" title="Company"/> <field name="company_id"/></div>
                                        <div><i class="fa fa-calendar" title="Period"/> <field name="start_date"/> - <field name="end_date"/></div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <field name="completion_percentage" widget="progressbar"/>
                                        </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="state" widget="label_selection"
                                                       options="{'classes': {'draft': 'default', 'submitted': 'info', 'approved': 'warning', 'in_progress': 'primary', 'completed': 'success', 'evaluated': 'success', 'cancelled': 'muted'}}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUE DASHBOARD -->
        <!-- ================================= -->

        <!-- Vue dashboard des stages -->
        <record id="view_internship_stage_dashboard" model="ir.ui.view">
            <field name="name">internship.stage.dashboard</field>
            <field name="model">internship.stage</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" default_group_by="state" type="primary">
                    <field name="title"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="company_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="completion_percentage"/>
                    <field name="state"/>
                    <field name="defense_status"/>
                    <field name="final_grade"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong><field name="title"/></strong>
                                        <div><i class="fa fa-user" title="Student"/> <field name="student_id"/></div>
                                        <div><i class="fa fa-briefcase" title="Supervisor"/> <field name="supervisor_id"/></div>
                                        <div><i class="fa fa-calendar" title="Period"/> <field name="start_date"/> - <field name="end_date"/></div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <field name="completion_percentage" widget="progressbar"/>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="state" widget="label_selection"
                                                       options="{'classes': {'draft': 'default', 'submitted': 'info', 'approved': 'warning', 'in_progress': 'primary', 'completed': 'success', 'evaluated': 'success', 'cancelled': 'muted'}}"/>
                                            </div>
                                        </div>
                                        <div t-if="record.defense_status.raw_value" class="mt-2">
                                            <small class="text-muted">
                                                <i class="fa fa-graduation-cap" title="Defense"/>
                                                <field name="defense_status" widget="label_selection"/>
                                            </small>
                                        </div>
                                        <div t-if="record.final_grade.raw_value" class="mt-1">
                                            <span class="badge badge-success">
                                                <i class="fa fa-star" title="Grade"/> <field name="final_grade"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================================= -->
        <!-- ACTIONS -->
        <!-- ================================= -->

        <!-- Action principale : Liste de tous les stages -->
        <record id="action_internship_stage_list" model="ir.actions.act_window">
            <field name="name">Internships</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first internship!
                </p>
                <p>
                    Manage all internships in your organization: creation, tracking, evaluation.
                </p>
            </field>
        </record>

        <!-- Action : Mes stages (pour étudiants) -->
        <record id="action_internship_stage_my" model="ir.actions.act_window">
            <field name="name">My Internships</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('student_id.user_id', '=', uid)]</field>
            <field name="context">{'default_student_id': [(6, 0, [])]}</field>
        </record>

        <!-- Action : Stages à encadrer (pour superviseurs) -->
        <record id="action_internship_stage_supervise" model="ir.actions.act_window">
            <field name="name">Supervised Internships</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('supervisor_id.user_id', '=', uid)]</field>
        </record>

        <!-- Action dashboard : Vue dashboard des stages -->
        <record id="action_internship_stage_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">internship.stage</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_internship_stage_dashboard"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first internship!
                </p>
                <p>
                    The dashboard allows you to visualize all your internships
                    with progress and status indicators.
                </p>
            </field>
        </record>

    </data>
</odoo>