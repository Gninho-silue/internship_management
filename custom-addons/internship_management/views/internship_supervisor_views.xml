<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Supervisor List View -->
        <record id="internship_supervisor_tree_view" model="ir.ui.view">
            <field name="name">internship.supervisor.tree</field>
            <field name="model">internship.supervisor</field>
            <field name="arch" type="xml">
                <tree string="Internship Supervisors">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="department"/>
                    <field name="position"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="availability" widget="badge"/>
                    <field name="current_students_count"/>
                    <field name="max_students"/>
                    <field name="workload_percentage" widget="progressbar"/>
                    <field name="stage_count"/>
                </tree>
            </field>
        </record>

        <!-- Supervisor Form View -->
        <record id="internship_supervisor_form_view" model="ir.ui.view">
            <field name="name">internship.supervisor.form</field>
            <field name="model">internship.supervisor</field>
            <field name="arch" type="xml">
                <form string="Internship Supervisor">
                    <header>
                        <field name="availability" widget="statusbar"
                               statusbar_colors="{'available':'success','busy':'warning','unavailable':'danger'}"/>
                    </header>
                    <sheet>
                        <field name="profile_image" widget="image" class="oe_avatar"
                               options="{'size': [90, 90]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Full Name"/>
                            </h1>
                        </div>

                        <group>
                            <group name="contact" string="Contact Information">
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="user_id" options="{'no_create': True}"/>
                            </group>
                            <group name="professional" string="Professional Information">
                                <field name="company_id"/>
                                <field name="department"/>
                                <field name="position"/>
                            </group>
                        </group>

                        <group>
                            <group name="capacity" string="Supervision Capacity">
                                <field name="max_students"/>
                                <field name="current_students_count" readonly="1"/>
                                <field name="workload_percentage" widget="progressbar" readonly="1"/>
                                <field name="stage_count" readonly="1"/>
                            </group>
                            <group name="status" string="Status">
                                <field name="active"/>
                            </group>
                        </group>

                        <group string="Areas of Expertise">
                            <field name="expertise_area_ids" widget="many2many_tags"
                                   options="{'color_field': 'name', 'no_create': True}"/>
                        </group>

                        <notebook>
                            <page string="Supervised Internships">
                                <div class="oe_button_box" name="button_box">
                                    <button name="action_view_supervised_internships"
                                            type="object"
                                            class="oe_stat_button"
                                            icon="fa-graduation-cap">
                                        <field string="Internships" name="stage_count" widget="statinfo"/>
                                    </button>
                                </div>
                                <field name="stage_ids">
                                    <tree decoration-info="state=='draft'"
                                          decoration-warning="state=='approved'"
                                          decoration-primary="state=='in_progress'"
                                          decoration-success="state in ['completed','evaluated']">
                                        <field name="title"/>
                                        <field name="student_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="completion_percentage" widget="progressbar"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Enhanced Supervisor Kanban View -->
        <record id="view_internship_supervisor_kanban" model="ir.ui.view">
            <field name="name">internship.supervisor.kanban</field>
            <field name="model">internship.supervisor</field>
            <field name="arch" type="xml">
                <kanban default_group_by="availability" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="company_id"/>
                    <field name="department"/>
                    <field name="position"/>
                    <field name="max_students"/>
                    <field name="current_students_count"/>
                    <field name="workload_percentage"/>
                    <field name="availability"/>
                    <field name="profile_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('internship.supervisor', 'profile_image', record.id.raw_value)"
                                         alt="Supervisor" class="o_kanban_image_inner_pic"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section">
                                        <div><i class="fa fa-envelope" title="Email"/> <field name="email"/></div>
                                        <div><i class="fa fa-briefcase" title="Company"/> <field name="company_id"/></div>
                                        <div><i class="fa fa-building" title="Department"/>
                                             <field name="department"/> - <field name="position"/></div>
                                    </div>

                                    <!-- Workload Progress Bar -->
                                    <div class="mt-2">
                                        <div class="text-muted small">
                                            Workload: <field name="current_students_count"/>/<field name="max_students"/> students
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar"
                                                 t-attf-style="width: #{record.workload_percentage.raw_value}%"
                                                 t-attf-class="progress-bar #{record.workload_percentage.raw_value >= 100 ? 'bg-danger' : (record.workload_percentage.raw_value >= 80 ? 'bg-warning' : 'bg-success')}"/>
                                        </div>
                                    </div>

                                    <div class="o_kanban_record_bottom mt-2">
                                        <div class="oe_kanban_bottom_left">
                                            <i class="fa fa-users" title="Max Students"/> <field name="max_students"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="availability" widget="label_selection"
                                                   options="{'classes': {'available': 'success', 'busy': 'warning', 'unavailable': 'danger'}}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Supervisor Action -->
        <record id="action_internship_supervisor_list" model="ir.actions.act_window">
            <field name="name">Supervisors</field>
            <field name="res_model">internship.supervisor</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add your first supervisor
                </p>
                <p>
                    Manage supervisor profiles, expertise areas, and supervision capacity.
                </p>
            </field>
        </record>

    </data>
</odoo>