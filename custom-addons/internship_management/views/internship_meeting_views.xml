<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================= -->
    <!-- VUES POUR LA GESTION DES RÉUNIONS -->
    <!-- ================================= -->

    <!-- Vue Liste (Tree) -->
    <record id="view_internship_meeting_tree" model="ir.ui.view">
        <field name="name">internship.meeting.tree</field>
        <field name="model">internship.meeting</field>
        <field name="arch" type="xml">
            <tree string="Réunions" multi_edit="1"
                  decoration-info="state=='draft'"
                  decoration-primary="state=='scheduled'"
                  decoration-success="state=='completed'"
                  decoration-muted="state=='cancelled'">

                <field name="name"/>
                <field name="stage_id"/>
                <field name="meeting_type" widget="badge"/>
                <field name="meeting_modality" widget="badge" optional="hidden"/>
                <field name="date"/>
                <field name="duration"/>
                <field name="organizer_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_internship_meeting_kanban" model="ir.ui.view">
        <field name="name">internship.meeting.kanban</field>
        <field name="model">internship.meeting</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="stage_id"/>
                <field name="date"/>
                <field name="organizer_id"/>
                <field name="state"/>
                <field name="partner_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill o_internship_meeting_kanban">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle text-muted">
                                    <!-- CORRECTION : Ajout de l'attribut title pour l'accessibilité -->
                                    <i class="fa fa-calendar me-1" title="Date"/>
                                    <field name="date" widget="datetime"/>
                                </div>
                                <div>
                                    <field name="stage_id"/>
                                </div>
                                <div class="mt-2">
                                    <field name="partner_ids" widget="many2many_avatar_user"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"/>
                                        <field name="meeting_type" widget="badge"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img t-att-src="kanban_image('res.users', 'avatar_128', record.organizer_id.raw_value)"
                                             t-att-title="record.organizer_id.value"
                                             t-att-alt="record.organizer_id.value"
                                             class="oe_kanban_avatar o_image_24_cover"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Calendrier -->
    <record id="view_internship_meeting_calendar" model="ir.ui.view">
        <field name="name">internship.meeting.calendar</field>
        <field name="model">internship.meeting</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier des Réunions"
                      date_start="date"
                      date_stop="stop_date"
                      color="organizer_id"
                      mode="month">
                <field name="name" string="Titre"/>
                <field name="stage_id"/>
                <field name="partner_ids" widget="many2many_tags_avatar"/>
            </calendar>
        </field>
    </record>

    <!-- Vue Recherche -->
    <record id="view_internship_meeting_search" model="ir.ui.view">
        <field name="name">internship.meeting.search</field>
        <field name="model">internship.meeting</field>
        <field name="arch" type="xml">
            <search string="Rechercher des Réunions">
                <field name="name"/>
                <field name="stage_id"/>
                <field name="organizer_id"/>
                <field name="partner_ids" string="Participant"/>

                <!-- ✅ FILTRE CORRIGÉ -->
                <filter string="Mes Réunions" name="my_meetings"
                        domain="[('partner_ids.user_ids', 'in', [uid])]"/>

                <filter string="Organisées par Moi" name="organized_by_me"
                        domain="[('organizer_id', '=', uid)]"/>
                <separator/>
                <filter string="Planifiées" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                <filter string="Terminées" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Aujourd'hui" name="today"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),
                             ('date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="À venir" name="upcoming"
                        domain="[('date', '&gt;=', time.strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Statut" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Type" name="group_meeting_type" context="{'group_by': 'meeting_type'}"/>
                    <filter string="Organisateur" name="group_organizer" context="{'group_by': 'organizer_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Formulaire -->
    <record id="view_internship_meeting_form" model="ir.ui.view">
        <field name="name">internship.meeting.form</field>
        <field name="model">internship.meeting</field>
        <field name="arch" type="xml">
            <form string="Gestion de Réunion">
                <header>
                    <button name="action_schedule" string="Planifier &amp; Envoyer l'Invitation" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_complete" string="Marquer comme Terminée" type="object"
                            class="btn-primary" invisible="state != 'scheduled'"/>
                    <button name="action_cancel" string="Annuler la Réunion" type="object"
                            invisible="state not in ['draft', 'scheduled']"
                            confirm="Êtes-vous sûr de vouloir annuler cette réunion ? Une notification sera envoyée."/>
                    <button name="action_reset_to_draft" string="Réinitialiser en Brouillon" type="object"
                            invisible="state not in ['cancelled', 'completed']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,scheduled,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Sujet de la réunion..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="stage_id" options="{'no_create': True}"/>
                            <field name="student_id"/>
                            <field name="supervisor_id"/>
                            <field name="organizer_id" readonly="1" widget="many2one_avatar_user"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="duration" widget="float_time"/>
                            <field name="stop_date" readonly="1"/>
                            <field name="meeting_type"/>
                        </group>
                    </group>
                    <group string="Détails de la Réunion">
                        <field name="meeting_modality" widget="radio"/>
                        <field name="location" invisible="meeting_modality != 'physical'"/>
                        <field name="meeting_url" widget="url" invisible="meeting_modality != 'virtual'"/>
                    </group>
                    <notebook>
                        <page string="Participants" name="participants">
                            <!--
                                 CORRECTION : La sous-vue <kanban_view> a été supprimée.
                                 Le widget="many2many_kanban" utilisera la vue par défaut de res.partner.
                                 C'est la syntaxe correcte pour Odoo 17.
                            -->
                            <field name="partner_ids" widget="many2many_kanban"/>
                        </page>
                        <page string="Ordre du Jour" name="agenda">
                            <field name="agenda"/>
                        </page>
                        <page string="Compte-Rendu" name="summary">
                            <field name="summary" placeholder="Rédigez ici le compte-rendu après la réunion..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Actions de Fenêtre -->
    <record id="action_internship_meeting_list" model="ir.actions.act_window">
        <field name="name">Réunions</field>
        <field name="res_model">internship.meeting</field>
        <field name="view_mode">calendar,kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Planifiez votre première réunion !
            </p>
            <p>
                Organisez et gérez les réunions de suivi, les soutenances et autres événements de stage.
            </p>
        </field>
    </record>

    <!-- ================================= -->
    <!-- ACTIONS DE FENÊTRE SPÉCIFIQUES (RESTAURÉES) -->
    <!-- ================================= -->

    <!-- Action pour "Mes Réunions" (pour les participants) -->
    <!-- ✅ ACTION CORRIGÉE -->
    <record id="action_internship_meeting_my" model="ir.actions.act_window">
        <field name="name">Mes Réunions</field>
        <field name="res_model">internship.meeting</field>
        <field name="view_mode">calendar,kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_my_meetings': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune réunion n'est planifiée pour vous pour le moment.
            </p>
            <p>
                Les réunions auxquelles vous êtes invité(e) apparaîtront ici.
            </p>
        </field>
    </record>

    <!-- ✅ ACTION POUR SUPERVISEUR -->
    <record id="action_internship_meeting_organized" model="ir.actions.act_window">
        <field name="name">Réunions que j'organise</field>
        <field name="res_model">internship.meeting</field>
        <field name="view_mode">calendar,kanban,tree,form</field>
        <field name="domain">[('organizer_id', '=', uid)]</field>
        <field name="context">{'search_default_organized_by_me': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Vous n'avez encore organisé aucune réunion.
            </p>
            <p>
                Cliquez sur "Créer" pour planifier votre première réunion de suivi ou de soutenance.
            </p>
        </field>
    </record>

    <!-- Action pour "Réunions que j'organise" -->
    <record id="action_internship_meeting_organized" model="ir.actions.act_window">
        <field name="name">Réunions que j'organise</field>
        <field name="res_model">internship.meeting</field>
        <field name="view_mode">calendar,kanban,tree,form</field>
        <field name="domain">[('organizer_id', '=', uid)]</field>
        <field name="context">{'search_default_organized_by_me': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Vous n'avez encore organisé aucune réunion.
            </p>
            <p>
                Cliquez sur "Créer" pour planifier votre première réunion de suivi ou de soutenance.
            </p>
        </field>
    </record>
</odoo>