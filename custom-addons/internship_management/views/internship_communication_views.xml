<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Communication Tree View -->
        <record id="view_internship_communication_tree" model="ir.ui.view">
            <field name="name">internship.communication.tree</field>
            <field name="model">internship.communication</field>
            <field name="arch" type="xml">
                <tree string="Communications" decoration-info="is_recent" decoration-muted="state == 'archived'">
                    <field name="subject"/>
                    <field name="communication_type"/>
                    <field name="sender_id"/>
                    <field name="recipient_count"/>
                    <field name="priority" widget="priority"/>
                    <field name="state"/>
                    <field name="create_date"/>
                    <field name="stage_id"/>
                    <field name="is_recent" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Communication Form View -->
        <record id="view_internship_communication_form" model="ir.ui.view">
            <field name="name">internship.communication.form</field>
            <field name="model">internship.communication</field>
            <field name="arch" type="xml">
                <form string="Communication" class="o_communication_form">
                    <header>
                        <button name="action_send" string="Send" type="object"
                                class="oe_highlight" icon="fa-paper-plane"
                                invisible="state != 'draft'"/>
                        <button name="action_reply" string="Reply" type="object"
                                class="btn-info" icon="fa-reply"
                                invisible="state == 'draft'"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,sent,read,replied"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="subject" placeholder="Communication subject..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="communication_type"/>
                                <field name="priority" widget="priority"/>
                                <field name="sender_id"/>
                                <field name="stage_id"/>
                            </group>
                            <group>
                                <field name="recipient_ids" widget="many2many_tags"/>
                                <field name="document_id"/>
                                <field name="meeting_id"/>
                                <field name="create_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="content" widget="html"/>
                        </group>
                        <group string="Threading" invisible="not parent_id">
                            <field name="parent_id"/>
                            <field name="child_ids" widget="one2many">
                                <tree>
                                    <field name="subject"/>
                                    <field name="sender_id"/>
                                    <field name="create_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Communication Search View -->
        <record id="view_internship_communication_search" model="ir.ui.view">
            <field name="name">internship.communication.search</field>
            <field name="model">internship.communication</field>
            <field name="arch" type="xml">
                <search string="Search Communications">
                    <field name="subject"/>
                    <field name="sender_id"/>
                    <field name="recipient_ids"/>
                    <field name="stage_id"/>
                    <field name="document_id"/>
                    <field name="meeting_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Read" name="read" domain="[('state', '=', 'read')]"/>
                    <filter string="Replied" name="replied" domain="[('state', '=', 'replied')]"/>
                    <separator/>
                    <filter string="Internal Messages" name="internal" domain="[('communication_type', '=', 'internal_message')]"/>
                    <filter string="Document Feedback" name="feedback" domain="[('communication_type', '=', 'document_feedback')]"/>
                    <filter string="System Notifications" name="system" domain="[('communication_type', '=', 'system_notification')]"/>
                    <separator/>
                    <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                    <filter string="Recent" name="recent" domain="[('is_recent', '=', True)]"/>
                    <separator/>
                    <filter string="My Communications" name="my_communications" domain="[('sender_id', '=', uid)]"/>
                    <filter string="Communications to Me" name="to_me" domain="[('recipient_ids', 'in', [uid])]"/>
                    <group expand="0" string="Group By">
                        <filter string="Communication Type" name="group_type" context="{'group_by': 'communication_type'}"/>
                        <filter string="Sender" name="group_sender" context="{'group_by': 'sender_id'}"/>
                        <filter string="Stage" name="group_stage" context="{'group_by': 'stage_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                        <filter string="Creation Date" name="group_date" context="{'group_by': 'create_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Communication Kanban View -->
        <record id="view_internship_communication_kanban" model="ir.ui.view">
            <field name="name">internship.communication.kanban</field>
            <field name="model">internship.communication</field>
            <field name="arch" type="xml">
                <kanban string="Communications" class="o_communication_kanban">
                    <field name="subject"/>
                    <field name="communication_type"/>
                    <field name="sender_id"/>
                    <field name="recipient_count"/>
                    <field name="priority"/>
                    <field name="state"/>
                    <field name="create_date"/>
                    <field name="stage_id"/>
                    <field name="is_recent"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="subject"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_priority">
                                            <field name="priority" widget="priority"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_details">
                                            <div class="o_kanban_record_subtitle">
                                                <span t-esc="record.communication_type.value"/>
                                                <span> â€¢ </span>
                                                <span t-esc="record.sender_id.value"/>
                                            </div>
                                            <div class="o_kanban_record_bottom">
                                                <div class="oe_kanban_bottom_left">
                                                    <span class="badge badge-info" t-if="record.recipient_count.value > 0">
                                                        <i class="fa fa-users"/> <t t-esc="record.recipient_count.value"/>
                                                    </span>
                                                </div>
                                                <div class="oe_kanban_bottom_right">
                                                    <span class="badge badge-success" t-if="record.is_recent.value">
                                                        Recent
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Communication Actions -->
        <record id="action_internship_communication_list" model="ir.actions.act_window">
            <field name="name">Communications</field>
            <field name="res_model">internship.communication</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_internship_communication_search"/>
            <field name="context">{'search_default_recent': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first communication!
                </p>
                <p>
                    Use communications to exchange messages, provide feedback on documents,
                    and send notifications within internship stages.
                </p>
            </field>
        </record>

        <record id="action_internship_communication_my" model="ir.actions.act_window">
            <field name="name">My Communications</field>
            <field name="res_model">internship.communication</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_internship_communication_search"/>
            <field name="domain">[('sender_id', '=', uid or  recipient_ids in [uid])]</field>
            <field name="context">{'search_default_my_communications': 1}</field>
        </record>

        <record id="action_internship_communication_to_me" model="ir.actions.act_window">
            <field name="name">Communications to Me</field>
            <field name="res_model">internship.communication</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_internship_communication_search"/>
            <field name="domain">[('recipient_ids', 'in', [uid])]</field>
            <field name="context">{'search_default_to_me': 1}</field>
        </record>

    </data>
</odoo>
