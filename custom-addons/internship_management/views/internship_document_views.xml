<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Liste (Tree) -->
        <record id="view_internship_document_tree" model="ir.ui.view">
            <field name="name">internship.document.tree</field>
            <field name="model">internship.document</field>
            <field name="arch" type="xml">
                <tree string="Documents" multi_edit="1">
                    <field name="name" string="Titre"/>
                    <field name="stage_id" string="Stage"/>
                    <field name="document_type" string="Type" widget="badge"/>
                    <field name="student_id" string="Étudiant" optional="show"/>
                    <field name="supervisor_id" string="Encadrant" optional="show"/>
                    <field name="date_upload" string="Date de Téléversement"/>
                    <field name="version"/>
                    <field name="state" string="Statut" widget="badge"
                           decoration-info="state == 'draft' or state == 'submitted'"
                           decoration-warning="state == 'under_review'"
                           decoration-success="state == 'approved'"
                           decoration-danger="state == 'rejected'"
                           decoration-muted="state == 'archived'"/>
                </tree>
            </field>
        </record>

        <!-- Vue Formulaire (simplifiée et corrigée) -->
        <record id="view_internship_document_form" model="ir.ui.view">
            <field name="name">internship.document.form</field>
            <field name="model">internship.document</field>
            <field name="arch" type="xml">
                <form string="Document">
                    <header>
                        <button name="action_submit_for_review" string="Soumettre pour Révision" type="object"
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_start_review" string="Démarrer la Révision" type="object"
                                class="btn-secondary" invisible="state != 'submitted'"/>
                        <button name="action_approve" string="Approuver" type="object"
                                class="btn-success" invisible="state != 'under_review'"/>
                        <button name="action_reject" string="Rejeter" type="object"
                                class="btn-danger" invisible="state != 'under_review'"/>
                        <button name="toggle_active" string="Archiver" type="object"
                                invisible="active == False"/>
                        <button name="toggle_active" string="Désarchiver" type="object"
                                invisible="active == True"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submitted,under_review,approved,rejected"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" invisible="active"/>
                        <div class="oe_title">
                            <label for="name" string="Titre du Document"/>
                            <h1>
                                <field name="name" placeholder="Ex: Rapport de mi-stage..."/>
                            </h1>
                        </div>

                        <group>
                            <group string="Informations Principales">
                                <field name="stage_id"/>
                                <field name="student_id" readonly="1"/>
                                <field name="supervisor_id" readonly="1"/>
                                <field name="document_type"/>
                                <field name="meeting_id" string="Réunion Associée"/>
                                <field name="version"/>
                            </group>
                            <group string="Fichier">
                                <field name="file" filename="filename" required="1"/>
                                <field name="filename" invisible="1"/>
                                <field name="date_upload" readonly="1"/>
                                <field name="uploaded_by" readonly="1" widget="many2one_avatar_user"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" nolabel="1"
                                       placeholder="Ajoutez une description détaillée du contenu du document..."/>
                            </page>
                            <page string="Révision" name="review" invisible="not review_required">
                                <group>
                                    <group>
                                        <field name="review_required" string="Révision Requise"/>
                                        <field name="review_date" readonly="1"/>
                                        <field name="reviewed_by" readonly="1" widget="many2one_avatar_user"/>
                                    </group>
                                </group>
                                <label for="review_comments" string="Commentaires de Révision"/>
                                <field name="review_comments" nolabel="1"/>
                            </page>
                            <page string="Commentaires" name="feedback">
                                <field name="feedback_ids" nolabel="1">
                                    <tree>
                                        <field name="feedback_summary" string="Résumé"/>
                                        <field name="reviewer_id" string="Auteur"/>
                                        <field name="feedback_type" string="Type"/>
                                        <field name="create_date" string="Date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Recherche -->
        <record id="view_internship_document_search" model="ir.ui.view">
            <field name="name">internship.document.search</field>
            <field name="model">internship.document</field>
            <field name="arch" type="xml">
                <search string="Rechercher des Documents">
                    <field name="name" string="Titre"/>
                    <field name="stage_id"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <separator/>
                    <filter string="Mes Documents" name="my_documents"
                            domain="[('uploaded_by', '=', uid)]"/>
                    <filter string="À Réviser" name="to_review"
                            domain="[('state', 'in', ['submitted', 'under_review'])]"/>
                    <filter string="Approuvés" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Rejetés" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <separator/>
                    <filter string="Archivés" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Regrouper par">
                        <filter string="Statut" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Type" name="group_type" context="{'group_by': 'document_type'}"/>
                        <filter string="Stage" name="group_stage" context="{'group_by': 'stage_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================= -->
        <!-- ACTIONS (RÉTABLIES ET TRADUITES) -->
        <!-- ================================= -->
        <record id="action_internship_document_list" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="res_model">internship.document</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Téléversez votre premier document !
                </p>
                <p>
                    Gérez ici tous les documents relatifs aux stages (rapports, conventions, etc.).
                </p>
            </field>
        </record>

        <!-- Action pour les documents à réviser (Encadrants) -->
        <record id="action_internship_document_review" model="ir.actions.act_window">
            <field name="name">Documents à Réviser</field>
            <field name="res_model">internship.document</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('state', 'in', ['submitted', 'under_review']), ('supervisor_id.user_id', '=', uid)]
            </field>
            <field name="context">{'search_default_to_review': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun document à réviser pour le moment !
                </p>
                <p>
                    Les documents soumis par les étudiants pour votre révision apparaîtront ici.
                </p>
            </field>
        </record>

        <!-- Action pour mes documents (Étudiants) -->
        <record id="action_internship_document_my" model="ir.actions.act_window">
            <field name="name">Mes Documents</field>
            <field name="res_model">internship.document</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('student_id.user_id', '=', uid)]</field>
            <field name="context">{'search_default_my_documents': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Téléversez vos documents ici !
                </p>
                <p>
                    Tous les documents que vous avez téléversés pour vos stages seront listés ici.
                </p>
            </field>
        </record>

    </data>
</odoo>