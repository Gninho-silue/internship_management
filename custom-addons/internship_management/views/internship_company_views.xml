<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue liste des entreprises -->
        <record id="internship_company_tree_view" model="ir.ui.view">
            <field name="name">internship.company.tree</field>
            <field name="model">internship.company</field>
            <field name="arch" type="xml">
                <tree string="Entreprises d'Accueil">
                    <field name="name"/>
                    <field name="industry"/>
                    <field name="size"/>
                    <field name="city"/>
                    <field name="contact_name"/>
                    <field name="contact_email"/>
                    <field name="stage_count"/>
                    <field name="rating"/>
                    <field name="agreement_signed"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire entreprise -->
        <record id="internship_company_form_view" model="ir.ui.view">
            <field name="name">internship.company.form</field>
            <field name="model">internship.company</field>
            <field name="arch" type="xml">
                <form string="Entreprise d'Accueil">
                    <sheet>
                        <field name="logo" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'entreprise"/>
                            </h1>
                        </div>
                        <group>
                            <group name="company_info">
                                <field name="industry"/>
                                <field name="size"/>
                                <field name="website"/>
                                <field name="partner_id"/>
                            </group>
                            <group name="internship_info">
                                <field name="internship_capacity"/>
                                <field name="agreement_signed"/>
                                <field name="stage_count"/>
                                <field name="rating"/>
                            </group>
                        </group>
                        <group string="Adresse">
                            <group>
                                <field name="street"/>
                                <field name="city"/>
                            </group>
                            <group>
                                <field name="zip"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <group string="Contact Principal">
                            <group>
                                <field name="contact_name"/>
                                <field name="contact_email"/>
                            </group>
                            <group>
                                <field name="contact_phone"/>
                            </group>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="Stages Proposés">
                                <field name="stage_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="student_id"/>
                                        <field name="supervisor_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Encadrants">
                                <field name="supervisor_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="department"/>
                                        <field name="position"/>
                                        <field name="email"/>
                                        <field name="availability"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ================================= -->
        <!-- VUE KANBAN -->
        <!-- ================================= -->

        <!-- Vue kanban des entreprises -->
        <record id="view_internship_company_kanban" model="ir.ui.view">
            <field name="name">internship.company.kanban</field>
            <field name="model">internship.company</field>
            <field name="arch" type="xml">
                <kanban default_group_by="size" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="industry"/>
                    <field name="size"/>
                    <field name="city"/>
                    <field name="contact_name"/>
                    <field name="contact_email"/>
                    <field name="internship_capacity"/>
                    <field name="agreement_signed"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong><field name="name"/></strong>
                                        <div><i class="fa fa-industry" title="Secteur"/> <field name="industry"/></div>
                                        <div><i class="fa fa-map-marker" title="Ville"/> <field name="city"/></div>
                                        <div><i class="fa fa-user" title="Contact"/> <field name="contact_name"/> - <field name="contact_email"/></div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <i class="fa fa-users" title="Capacité"/> <field name="internship_capacity"/>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="agreement_signed" widget="boolean_toggle"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action pour la liste des entreprises -->
        <record id="action_internship_company_list" model="ir.actions.act_window">
            <field name="name">Entreprises</field>
            <field name="res_model">internship.company</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle entreprise
                </p>
                <p>
                    Gérez ici toutes les entreprises partenaires pour les stages.
                </p>
            </field>
        </record>

    </data>
</odoo>