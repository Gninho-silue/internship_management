<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_biblio_book_tree" model="ir.ui.view">
        <field name="name">biblio.book.tree</field>
        <field name="model">biblio.book</field>
        <field name="arch" type="xml">
            <tree string="Books">
                <field name="short_name"/>
                <field name="name"/>
                <field name="publisher_id"/>
                <field name="state" widget="badge" decoration-success="state == 'available'" decoration-info="state == 'borrowed'" decoration-danger="state == 'lost'"/>
                <field name="retail_price"/>
                <field name="pages"/>
                <field name="reader_rating"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_biblio_book_form" model="ir.ui.view">
        <field name="name">biblio.book.form</field>
        <field name="model">biblio.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Book Title..." class="o_text_overflow"/>
                        </h1>
                        <h2>
                            <field name="short_name" placeholder="Short Title..."/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="publisher_id"/>
                            <field name="date_release"/>
                            <field name="pages"/>
                            <field name="reader_rating"/>
                        </group>
                        <group>
                            <field name="state" widget="radio"/>
                            <field name="cost_price"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="retail_price"/>
                            <field name="out_of_print"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Cover" name="cover">
                            <field name="cover" widget="image" class="oe_avatar"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_biblio_book_kanban" model="ir.ui.view">
        <field name="name">biblio.book.kanban</field>
        <field name="model">biblio.book</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="short_name"/>
                <field name="publisher_id"/>
                <field name="state"/>
                <field name="retail_price"/>
                <field name="pages"/>
                <field name="reader_rating"/>
                <field name="cover"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="short_name"/>
                                        </small>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" type="button" data-bs-toggle="dropdown" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Publisher:</strong>
                                            <field name="publisher_id"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Pages:</strong>
                                            <field name="pages"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <strong>Price:</strong>
                                            <field name="retail_price"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Rating:</strong>
                                            <field name="reader_rating"/> ‚≠ê
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <field name="cover" widget="image" class="o_kanban_image"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-attf-class="badge badge-#{record.state.raw_value == 'available' and 'success' or record.state.raw_value == 'borrowed' and 'info' or 'danger'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_biblio_book_search" model="ir.ui.view">
        <field name="name">biblio.book.search</field>
        <field name="model">biblio.book</field>
        <field name="arch" type="xml">
            <search string="Books">
                <field name="name"/>
                <field name="short_name"/>
                <field name="publisher_id"/>
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Borrowed" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <filter string="Lost" name="lost" domain="[('state', '=', 'lost')]"/>
                <filter string="Out of Print" name="out_of_print" domain="[('out_of_print', '=', True)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Publisher" name="group_publisher" context="{'group_by': 'publisher_id'}"/>
                    <filter string="Release Date" name="group_date_release" context="{'group_by': 'date_release'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_biblio_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">biblio.book</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_biblio_book_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first book!
            </p>
            <p>
                Books are the main entities in the library management system.
                You can track their availability, pricing, and other details.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_biblio_root" name="Library" sequence="10"/>
    <menuitem id="menu_biblio_books" name="Books" parent="menu_biblio_root" action="action_biblio_book" sequence="10"/>

</odoo>