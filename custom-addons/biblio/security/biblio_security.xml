<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_biblio_user" model="res.groups">
        <field name="name">Biblio User</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="comment">The user will be able to consult books and manage their own borrowings.</field>
    </record>

    <record id="group_biblio_manager" model="res.groups">
        <field name="name">Biblio Manager</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="implied_ids" eval="[(4, ref('group_biblio_user'))]"/>
        <field name="comment">The manager will have full access to all biblio operations and configuration.</field>
    </record>

    <!-- Record Rules -->
    <record id="biblio_book_rule_user" model="ir.rule">
        <field name="name">Biblio Book: User Access</field>
        <field name="model_id" ref="model_biblio_book"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_biblio_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="biblio_book_rule_manager" model="ir.rule">
        <field name="name">Biblio Book: Manager Access</field>
        <field name="model_id" ref="model_biblio_book"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_biblio_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
