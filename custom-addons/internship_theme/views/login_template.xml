<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    ===================================================================
    CUSTOM LOGIN DESIGN - TECHPAL (Version améliorée)
    ===================================================================
    -->

    <!-- Ajout d'un titre et logo avant le formulaire -->
    <template id="login_custom" name="Login TechPal" inherit_id="web.login">

        <!-- Titre au-dessus du formulaire -->
        <xpath expr="//form[@class='oe_login_form']" position="before">
            <div class="text-center mb-4 techpal_header">
                <!-- Logo (temporaire - remplacer par logo TechPal) -->
                <div class="techpal_logo_container mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                         class="techpal_logo_icon">
                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                        <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                        <line x1="12" y1="22.08" x2="12" y2="12"></line>
                    </svg>
                </div>
                <h3 class="techpal_title mb-2">TechPal Casablanca</h3>
                <p class="techpal_subtitle text-muted mb-0">Gestion des Stages</p>
            </div>
        </xpath>

        <!-- Footer professionnel -->
        <xpath expr="//button[@type='submit']" position="after">
            <div class="techpal_footer text-center mt-5">
                <div class="techpal_footer_content">
                    <p class="mb-1">
                        <strong>© 2024-2025 TechPal Casablanca</strong>
                    </p>
                    <p class="text-muted small mb-0">
                        Plateforme de Gestion des Stages • Développé par SILUE
                    </p>
                </div>
            </div>
        </xpath>

    </template>

    <!-- Template reset password -->
    <template id="reset_password_custom" name="Reset Password TechPal" inherit_id="auth_signup.reset_password">

        <!-- Même header -->
        <xpath expr="//form[@class='oe_reset_password_form']" position="before">
            <div class="text-center mb-4 techpal_header">
                <div class="techpal_logo_container mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                         class="techpal_logo_icon">
                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                        <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                        <line x1="12" y1="22.08" x2="12" y2="12"></line>
                    </svg>
                </div>
                <h3 class="techpal_title mb-2">Réinitialisation</h3>
                <p class="techpal_subtitle text-muted mb-0">Récupération de votre compte</p>
            </div>
        </xpath>

        <!-- Même footer -->
        <xpath expr="//button[@type='submit']" position="after">
            <div class="techpal_footer text-center mt-5">
                <div class="techpal_footer_content">
                    <p class="mb-1">
                        <strong>© 2024-2025 TechPal Casablanca</strong>
                    </p>
                    <p class="text-muted small mb-0">
                        Plateforme de Gestion des Stages • Développé par SILUE
                    </p>
                </div>
            </div>
        </xpath>

    </template>

</odoo>